
RewriteEngine On

<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews
    </IfModule>

    # Redirect non-www to www
    RewriteCond %{HTTP_HOST} !switchscores.local
    #RewriteCond %{HTTP_HOST} !^(.+)\.(.+)\.(.+)
    RewriteCond %{HTTP_HOST} ^switchscores\.com [NC]
    RewriteRule ^(.*)$ https://www.%{HTTP_HOST}/$1 [L,R=301]

    # Redirect index.html
    RewriteRule ^index\.html$ / [NC,R=301,L]

    # Redirect Trailing Slashes If Not A Folder...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)/$ /$1 [L,R=301]

    # Handle Front Controller...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Page redirects
    Redirect 301 /news/20200504/animal-crossing-new-horizons-fossil-and-recipe-trading-lists /games/2583/animal-crossing-new-horizons
    Redirect 301 /news/20200503/animal-crossing-new-horizons-lets-buy-turnips-week-4 /games/2583/animal-crossing-new-horizons
    Redirect 301 /news/20200426/animal-crossing-new-horizons-lets-buy-turnips-week-3 /games/2583/animal-crossing-new-horizons
    Redirect 301 /news/20200419/animal-crossing-new-horizons-lets-buy-turnips-week-2 /games/2583/animal-crossing-new-horizons
    Redirect 301 /news/20200413/tarantulas-animal-crossing-leaving-in-april /news
    Redirect 301 /news/20200411/a-new-look-news-page /news
    Redirect 301 /news/20200216/feedback-wanted-on-switch-scores-categorisation /about
    Redirect 301 /news/20200120/revamped-games-on-sale-page-improved-site-navigation /about
    Redirect 301 /news/20190831/join-the-team-at-wos /about

</IfModule>
