<script>

    var formMode = '{{ FormMode }}';
    var formVals = [];

    if (formMode == 'edit') {

        // This is used when editing existing records.
        formVals['level_code'] = "{{ MarioMakerLevelData.level_code }}";
        formVals['game_style_id'] = "{{ MarioMakerLevelData.game_style_id }}";
        formVals['title'] = "{{ MarioMakerLevelData.title }}";
        formVals['description'] = "{{ MarioMakerLevelData|e('js') }}"

    } else {

        // This is used for new records.
        // It's also used when submitting the edit version, to avoid the DB data overwriting the form.
        formVals['level_code'] = "{{ old('level_code') }}";
        formVals['game_style_id'] = "{{ old('game_style_id') }}";
        formVals['title'] = "{{ old('title') }}";
        formVals['description'] = "{{ old('description')|e('js') }}"

    }

    $('#level_code').val(formVals['level_code']);
    $('#game_style_id').val(formVals['game_style_id']);
    $('#title').val(formVals['title']);
    $('#description').text(formVals['description']);

</script>
