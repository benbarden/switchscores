{% include 'common/form-errors.twig' %}
<form class="form-horizontal" role="form" method="post" action="{{ formSubmitAction }}">
    {{ csrf_field() }}

    <div class="form-group">
        <label for="game_id" class="col-md-4 control-label">Game</label>
        <div class="col-md-6">
            <select id="game_id" class="form-control" name="game_id" required autofocus>
                <option value="">&nbsp;</option>
                {% for item in GamesList %}
                    <option value="{{ item.id }}">{{ item.title }}</option>
                {% endfor %}
            </select>
        </div>
    </div>

    <div class="form-group">
        <label for="site_id" class="col-md-4 control-label">Quick rating</label>
        <div class="col-md-6">
            <select id="quick_rating" class="form-control" name="quick_rating">
                <option value="">&nbsp;</option>
                {% for item in QuickRatingList %}
                    <option value="{{ item.id }}">{{ item.rating_desc }}</option>
                {% endfor %}
            </select>
        </div>
    </div>

    <div class="form-group">
        <label for="review_score" class="col-md-4 control-label">Score out of 10</label>
        <div class="col-md-6">
            <input id="review_score" type="text" class="form-control" name="review_score">
            <p>
                <small>
                    Must be between 0-10. Decimals accepted. If you enter more than one decimal place,
                    the number will be rounded. e.g. 8.256 becomes 8.3.
                </small>
            </p>
        </div>
    </div>

    <div class="form-group">
        <label for="review_body" class="col-md-4 control-label">Review body</label>
        <div class="col-md-6">
            <textarea id="review_body" name="review_body" cols="50" rows="10"></textarea>
            <p>
                <small>
                    Write your review here. If you prefer to rate the game but not write a review,
                    that's ok!
                    <br>Please don't include any special formatting - it will be stripped out.
                    Line breaks will be preserved.
                    <br><strong>Maximum 500 characters.</strong> Keep it short and sweet :)
                </small>
            </p>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-8 col-md-offset-4">
            <button type="submit" class="btn outline btn-primary">
                Submit
            </button>
        </div>
    </div>
</form>
