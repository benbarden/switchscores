{% include 'common/form-errors.twig' %}
<form class="form-horizontal" role="form" method="post" action="{{ formSubmitAction }}">
    {{ csrf_field() }}

    <div class="form-group">
        <label for="game_id" class="col-md-4 control-label">Game</label>
        <div class="col-md-6">
            <select id="game_id" class="form-control" name="game_id" required autofocus>
                <option value="">&nbsp;</option>
                {% for item in GamesList %}
                    <option value="{{ item.id }}">{{ item.title }}</option>
                {% endfor %}
            </select>
        </div>
    </div>

    <div class="form-group">
        <label for="item_url" class="col-md-4 control-label">Url (include http://)</label>
        <div class="col-md-6">
            <input id="item_url" type="text" class="form-control" name="item_url" required>
        </div>
    </div>

    <div class="form-group">
        <label for="item_date" class="col-md-4 control-label">Date of review</label>
        <div class="col-md-6">
            <input id="item_date" type="date" class="form-control" name="item_date" required>
            <p>
                <small>
                    The date the review was published (not today's date).
                </small>
            </p>
        </div>
    </div>

    <div class="form-group">
        <label for="item_rating" class="col-md-4 control-label">Rating</label>
        <div class="col-md-6">
            <input id="item_rating" type="text" class="form-control" name="item_rating" value="{{ old('item_rating') }}" required>
            <p>
                <small>
                    Enter your rating here.
                    Decimals accepted. If you enter more than one decimal place,
                    the number will be rounded. e.g. 8.256 becomes 8.3.
                    <br>
                    If your site ranks out of 5, make sure you enter the rating out of 5 -
                    don't convert it to a mark out of 10. We'll do that for you.
                </small>
            </p>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-8 col-md-offset-4">
            <button type="submit" class="btn outline btn-primary">
                Submit
            </button>
        </div>
    </div>
</form>
