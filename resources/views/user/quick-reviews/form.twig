{% include 'common/form-errors.twig' %}
<form class="form-horizontal" role="form" method="post" action="{{ formSubmitAction }}">
    {{ csrf_field() }}

    <div class="form-group">
        <label for="game_id" class="col-md-4 control-label">Game</label>
        <div class="col-md-6">
            <select id="game_id" class="form-control" name="game_id" required autofocus>
                <option value="">&nbsp;</option>
                {% for item in GamesList %}
                    <option value="{{ item.id }}">{{ item.title }}</option>
                {% endfor %}
            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-4 control-label">Your score</label>
        <div class="col-md-6">
            {% for item in ScoreList %}
                <div class="col-md-2">
                    <input id="review_score_{{ item }}" name="review_score" value="{{ item }}" type="radio">
                    <label for="review_score_{{ item }}" style="margin: 10px 0;">
                        {% include 'modules/rating/badge.twig' with {'score': item} %}
                    </label>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="form-group">
        <label for="review_body" class="col-md-4 control-label">Your comments</label>
        <div class="col-md-6">
            <textarea id="review_body" name="review_body" cols="50" rows="10"></textarea>
            <p>
                <small>
                    Write your review here. If you prefer to rate the game but not write a review,
                    that's ok!
                    <br>Please don't include any special formatting - it will be stripped out.
                    Line breaks will be preserved.
                    <br><strong>Maximum 1000 characters.</strong> Keep it short and sweet :)
                </small>
            </p>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-8 col-md-offset-4">
            <button type="submit" class="btn outline btn-primary">
                Submit
            </button>
        </div>
    </div>
</form>
