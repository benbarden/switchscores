{% extends 'theme/wos/base.twig' %}

{% block page_body %}
<div class="row">

    <div class="col-md-12">

        <p>
            Forgotten your password? No problem. Enter your email address below; you'll receive
            an automatic email with further instructions.
        </p>

        {% if errors.any %}
            {% for error in errors.all %}
                <p>{{ error }}</p>
            {% endfor %}
        {% endif %}

        {{ message }}

        <form class="form-horizontal" role="form" method="POST" action="{{ route('password.email') }}">
            {{ csrf_field() }}

            <div class="form-group">
                <label for="email" class="col-md-2 control-label">Email address</label>

                <div class="col-md-4">
                    <input id="email" type="email" class="form-control" name="email" value="{{ old('email') }}" required>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">

                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary pull-left">
                        Send password reset link
                    </button>
                </div>
            </div>
        </form>

    </div>
</div>

{% endblock page_body %}
