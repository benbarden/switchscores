<script>

    var formMode = '{{ FormMode }}';
    var formVals = [];

    if (formMode == 'edit') {

        // This is used when editing existing records.
        formVals['invite_code'] = "{{ InviteCodeData.invite_code }}";
        formVals['times_used'] = "{{ InviteCodeData.times_used }}";
        formVals['times_left'] = "{{ InviteCodeData.times_left }}";
        formVals['is_active'] = "{{ InviteCodeData.is_active }}";

    } else {

        // This is used for new records.
        // It's also used when submitting the edit version, to avoid the DB data overwriting the form.
        formVals['invite_code'] = "{{ old('invite_code') }}";
        formVals['times_used'] = "{{ old('times_used') }}";
        formVals['times_left'] = "{{ old('times_left') }}";
        formVals['is_active'] = "{{ old('is_active') }}";

    }

    $('#invite_code').val(formVals['invite_code']);
    $('#times_used').val(formVals['times_used']);
    $('#times_left').val(formVals['times_left']);
    if (formVals['is_active'] == '1') {
        $('#is_active').attr('checked', true);
    } else {
        $('#is_active').attr('checked', false);
    }

    $('#invite_code').focus();

</script>
