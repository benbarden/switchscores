{% extends 'theme/wos/base.twig' %}

{% set crumbNav = [{'url': route('topRated.landing'), 'text': 'Top rated'}, {'text': 'All-time'}] %}

{% block page_body %}

<p>
    A list of Nintendo Switch games released in Europe, sorted to show the highest
    average rating across the reviews we've collated at World of Switch.
    Games need to have 3 or more reviews to be ranked.
</p>

<div class="row">

    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <h2>
            Top 100 Switch games - all-time
        </h2>
        {% if TopRatedAllTime|length %}
            {% for item in TopRatedAllTime %}
                <div class="col-xs-12 col-sm-12 col-md-6">
                    {% include 'games/layouts/rankedItem.twig' with {'item': item, 'cfgSmallTitles': 'Y', 'cfgRankPos': 'right'} %}
                </div>
            {% endfor %}
        {% else %}
            <p>No games found!</p>
        {% endif %}
    </div>
</div>

{% endblock page_body %}
