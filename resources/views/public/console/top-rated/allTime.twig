{% extends 'theme/wos/base.twig' %}

{% block page_body %}

{% include "ui/components/top-rated/nav.twig" with {
    consoleId: 1,
    activePage: 'alltime'
} %}

<p>
    This page shows the best Nintendo {{ ConsoleName }} games of all time, ranked by average review score.
    <br>
    Only games with at least 3 ratings are included.
</p>

<div class="row">

    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <h2>
            Top 100 Switch games - all-time
        </h2>
        <div class="row">

            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

                {% include "ui/components/top-rated/pagination.twig" with {
                    console: Console,
                    currentPage: CurrentPage,
                    totalPages: 5
                } %}

            </div>

        </div>
        {% if TopRatedAllTime|length %}
            {% include 'public/games/layouts/tiledGrid/layoutTopRatedMonth.twig' with {'GameList': TopRatedAllTime, 'batchOverride': 3} %}
        {% else %}
            <p>No games found!</p>
        {% endif %}
    </div>
</div>

{% endblock page_body %}
