{% extends 'theme/wos/base.twig' %}
{% import 'ui/components/game/console-banner.twig' as gameconsolebanner %}
{% import 'ui/blocks/game-grid.twig' as gamegrid %}
{% import "ui/components/headings/heading.twig" as heading %}
{% import 'ui/components/rating/badge.twig' as rating %}
{% import 'ui/components/affiliates/buttons.twig' as affiliate %}
{% import 'ui/components/game/card-v2.twig' as gamecard %}

{% set hideHeader = true %}

{% block page_body %}

<div class="row wos-content-page" itemscope itemtype="https://schema.org/VideoGame">

    <div class="col-xs-12 col-sm-8 col-md-8">

        <div class="row">

            <div class="col-sm-12 col-md-12 col-lg-12">

                <div class="pull-right text-center" style="margin: 15px 0 0 0;">
                    {% if GameData.game_rank %}
                        <div itemprop="aggregateRating" itemscope itemtype="https://schema.org/AggregateRating">
                            <span itemprop="ratingValue">{{ rating.score(GameData.rating_avg, 'h4', 'b3') }}</span>
                            <br>
                            <small>
                                <span itemprop="reviewCount">{{ GameData.review_count }}</span>
                                review{% if GameData.review_count != 1 %}s{% endif %}
                            </small>
                            <meta itemprop="bestRating" content="10" />
                            <meta itemprop="worstRating" content="0" />
                        </div>
                    {% elseif GameData.rating_avg %}
                        {{ rating.tbc(null, 'h4', 'b3', true) }}
                        <br>
                        <small>
                            {{ GameData.review_count }} review{% if GameData.review_count != 1 %}s{% endif %}
                        </small>
                    {% endif %}
                </div>
                <h1 style="margin: 10px 0;" itemprop="name">
                    {{ GameData.title }}
                </h1>

                {{ gameconsolebanner.show(GameData) }}

                {% set boxartUrl = ImageHelper.imageHeaderUrl(GameData) %}
                {% if boxartUrl %}
                    <img src="{{ boxartUrl }}" itemprop="image" class="img-responsive" style="border: 0; width: 100%;" alt="{{ GameData.title }}">
                {% endif %}

                {% if CleanVideoUrl %}
                    {% set VideoTypeDesc = GameData.getVideoTypeDesc() %}
                    {% include 'public/games/page/video-modal.twig' with {'VideoUrl': CleanVideoUrl, 'VideoType': VideoTypeDesc} %}
                {% endif %}

                {% if GameData.is_low_quality == 1 %}
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle"></i>
                        This game has been flagged with our quality filter.
                        <br>This is normally due to the quality of other games from this publisher.
                        <br>If you are the developer of this game, you can request an exemption.
                        <a href="{{ route('help.low-quality-filter') }}" style="color: #fff; font-weight: bold;">Learn more</a>.
                    </div>
                {% elseif GameData.one_to_watch == 1 %}
                    <div class="alert alert-success">
                        <i class="fas fa-lightbulb"></i>
                        <strong>One to watch</strong>: We've highlighted this as a title we think you should check out.
                    </div>
                {% endif %}

                {% if GameBlurb %}
                    <p style="margin-top: 15px;">
                        {{ GameBlurb|raw }}
                    </p>
                {% endif %}

                {% if GameData.game_description %}
                    <p style="margin-top: 15px;" itemprop="description">
                        <strong>About this game</strong>: {{ GameData.game_description|raw }}
                    </p>
                {% endif %}

                {% if GameTags|length > 0 %}

                    <p>
                        <i class="fa fa-tag" aria-hidden="true"></i>
                        <strong>Tags -</strong>
                        {% for item in GameTags %}
                            <a href="{{ route('console.byTag.page', {'console': GameData.console, 'tag': item.tag.link_title}) }}">
                                <nobr>{{ item.tag.tag_name }}</nobr>
                            </a>
                            {% if not loop.last %},{% endif %}
                        {% endfor %}
                    </p>

                {% endif %}

                {{ affiliate.buyButtons(GameData, Amazon) }}

                {#
                {% if not GameData.isDigitalDelisted() and ((FullAmazonUsLink) or (FullAmazonUkLink) or (DSNintendoCoUk is not null) or (GameData.nintendo_store_url_override)) %}
                    <h2>Buy this game</h2>
                    {% if FullAmazonUkLink %}
                        <a href="{{ FullAmazonUkLink }}" class="btn btn-primary btn-md" target="_blank">Buy at Amazon UK</a>
                    {% endif %}
                    {% if FullAmazonUsLink %}
                        {% if AmazonUSLinkType == 'product' %}
                            <a href="{{ FullAmazonUsLink }}" class="btn btn-primary btn-md" target="_blank">Buy at Amazon US</a>
                        {% else %}
                            <a href="{{ FullAmazonUsLink }}" class="btn btn-primary btn-md" target="_blank">Find at Amazon US</a>
                        {% endif %}
                    {% endif %}
                    {% if DSNintendoCoUk is not null %}
                        <a href="{{ eshop_url('eu', DSNintendoCoUk.url) }}" class="btn btn-primary btn-md" target="_blank">Buy at Nintendo.co.uk</a>
                    {% elseif GameData.nintendo_store_url_override %}
                        <a href="{{ GameData.nintendo_store_url_override }}" class="btn btn-primary btn-md" target="_blank">Buy at Nintendo store</a>
                    {% endif %}
                {% endif %}
                #}

                {% include 'public/games/page/reviews-critic.twig' with {'GameReviews': GameReviews} %}
                {% include 'public/games/page/reviews-member.twig' with {'ReviewList': GameQuickReviewList} %}
                {% include 'public/games/page/news.twig' with {'NewsList': GameNews} %}

            </div>

        </div>

        {% if RelatedByCategory %}
            <section class="more-games">
                <h2>More games in {{ GameData.category.name }}</h2>
                <div class="game-card-grid">
                    {% for game in RelatedByCategory %}
                        {{ gamecard.render(game) }}
                    {% endfor %}
                </div>

                <div class="view-all-container">
                    <a href="{{ route('console.byCategory.list', {'console': GameData.console, 'category': GameData.category.link_title}) }}"
                       class="view-all-link">
                        View all in {{ GameData.category.name }} →
                    </a>
                </div>
            </section>
        {% endif %}

        {% if RelatedByCollection %}
            <section class="more-games">
                <h2>More games in {{ CollectionName }}</h2>
                <div class="game-card-grid">
                    {% for game in RelatedByCollection %}
                        {{ gamecard.render(game) }}
                    {% endfor %}
                </div>

                <div class="view-all-container">
                    <a href="{{ route('console.byCollection.page', {'console': GameData.console, 'collection': GameData.gameCollection.link_title}) }}"
                       class="view-all-link">
                        View all in {{ CollectionName }} →
                    </a>
                </div>
            </section>
        {% endif %}

        {% if RelatedBySeries %}
            <section class="more-games">
                <h2>More games in {{ SeriesName }}</h2>
                <div class="game-card-grid">
                    {% for game in RelatedBySeries %}
                        {{ gamecard.render(game) }}
                    {% endfor %}
                </div>

                <div class="view-all-container">
                    <a href="{{ route('console.bySeries.page', {'console': GameData.console, 'series': GameData.series.link_title}) }}"
                       class="view-all-link">
                        View all in {{ SeriesName }} →
                    </a>
                </div>
            </section>
        {% endif %}

    </div>

    <div class="col-xs-12 col-sm-4 col-md-4">

        {{ heading.renderChunky('Game details', 'h2') }}
        {% include 'public/games/page/game-details.twig' with {'GameData': GameData, 'GameDevelopers': GameDevelopers, 'GamePublishers': GamePublishers, 'GameTags': GameTags, 'NewsInfoBox': 'N'} %}

        {% if GameData.game_rank or GameData.gameRankYear.game_rank or GameData.gameRankYearMonth.game_rank %}
            {% if GameData.console_id %}
                {{ heading.renderChunky('Rank ('~GameData.console.name~')', 'h2') }}
            {% else %}
                {{ heading.renderChunky('Rank', 'h2') }}
            {% endif %}
            {% include 'ui/components/game/rank.twig' with {
                GameData: GameData,
                RankMaximum: RankMaximum,
                TopPercent: TopPercent,
                TopRatedItem: TopRatedItem
            } only %}
        {% endif %}

        {% set GameShowUrl = route('game.show', {'id': GameData.id, 'linkTitle': GameData.link_title}) %}

    </div>

</div>

{% endblock page_body %}
