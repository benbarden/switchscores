{% import 'ui/components/rating/badge.twig' as rating %}

{# PACKSHOTS #}
{% if item.boxart_header_image or item.image_header %}
    {% set boxartUrl = ImageHelper.imageHeaderUrl(item) %}
    {% if item.eu_is_released == 0 %}
        {% set imageOpacity = ' opacity: 0.4;' %}
    {% endif %}
{% endif %}

<a href="{{ route('game.show', {'id': item.id, 'linkTitle': item.link_title}) }}">
    {% if boxartUrl %}
        <img src="{{ boxartUrl }}" class="img-responsive" style="border: 0;{{ imageOpacity }}" alt="{{ item.title }}">
    {% else %}
        <img src="/img/placeholder/no-image-found-wide.png" class="img-responsive" alt="{{ item.title }}">
    {% endif %}
</a>
<p class="h5" style="margin: 8px 0;">
    <a href="{{ route('game.show', {'id': item.id, 'linkTitle': item.link_title}) }}">{{ item.title }}</a>
</p>
<p style="margin: 8px 0;">
    {% if item.rating_avg %}
        {% if item.game_rank %}
            {{ rating.score(item.rating_avg, 'h6', 'b3') }}
        {% else %}
            {{ rating.tbc(null, 'h6', 'b3', true) }}
        {% endif %}
    {% endif %}
</p>
