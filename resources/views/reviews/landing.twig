{% extends 'theme/wos/base.twig' %}

{% set crumbNav = [{'text': 'Reviews'}] %}

{% block page_body %}

<div class="row">
    <div class="col-xs-12 col-sm-4 col-md-4">
        <h2>
            Rank updates
        </h2>
        {% if GameRankUpdates.count %}
            {% for item in GameRankUpdates %}
                <p>
                    <strong>{{ item.created_at|date('jS M') }}</strong>:
                    <a href="{{ LinkHelper.gameShow(item.game) }}">{{ item.game.title }}</a>
                    <br>
                    {% if item.movement > 0 %}
                        <span style="color: #090;">Up {{ item.movement }} place(s)</span>,
                        from {{ item.rank_old }} to {{ item.rank_new }}
                    {% elseif item.movement < 0 %}
                        <span style="color: #900;">Down {{ item.movement|replace('-', ' ') }} place(s)</span>,
                        from {{ item.rank_old }} to {{ item.rank_new }}
                    {% else %}
                        Initial rank: {{ item.rank_new }}
                    {% endif %}
                </p>
            {% endfor %}
        {% else %}
            <p>No rank updates to display.</p>
        {% endif %}
        {#
        <h2>
            Latest reviews
        </h2>
        {% if ReviewList.count %}
            {% for item in ReviewList %}
                <p>
                    <strong>{{ item.review_date|date('jS M') }}</strong>:
                    <a href="{{ LinkHelper.gameShow(item.game) }}">{{ item.game.title }}</a>
                    <br>
                    <small>
                        Source: <a href="{{ route('reviews.site', {'linkTitle': item.site.link_title}) }}">{{ item.site.name }}</a>;
                        Rating: {{ item.rating_normalised }}
                    </small>
                </p>
            {% endfor %}
        {% else %}
            <p>No reviews to display.</p>
        {% endif %}
        #}
    </div>
    <div class="col-xs-12 col-sm-4 col-md-4">
        <h2>Unranked games</h2>
        <p>
            Games need to have 3 reviews to be ranked. Review partners can help to get more of our database ranked.
        </p>
        <h3>By review count</h3>
        <ul>
            <li><a href="{{ route('reviews.notRanked', {'mode': 'by-count', 'filter': '2'}) }}">2 reviews</a></li>
            <li><a href="{{ route('reviews.notRanked', {'mode': 'by-count', 'filter': '1'}) }}">1 review</a></li>
            <li><a href="{{ route('reviews.notRanked', {'mode': 'by-count', 'filter': '0'}) }}">0 reviews</a></li>
        </ul>
        <h3>By year released</h3>
        <ul>
            <li><a href="{{ route('reviews.notRanked', {'mode': 'by-year', 'filter': '2017'}) }}">2017</a></li>
            <li><a href="{{ route('reviews.notRanked', {'mode': 'by-year', 'filter': '2018'}) }}">2018</a></li>
            <li><a href="{{ route('reviews.notRanked', {'mode': 'by-year', 'filter': '2019'}) }}">2019</a></li>
        </ul>
        <h3>By list</h3>
        <ul>
            <li><a href="{{ route('reviews.notRanked', {'mode': 'by-list', 'filter': 'aca-neogeo'}) }}">ACA NeoGeo</a></li>
            <li><a href="{{ route('reviews.notRanked', {'mode': 'by-list', 'filter': 'arcade-archives'}) }}">Arcade Archives</a></li>
            <li><a href="{{ route('reviews.notRanked', {'mode': 'by-list', 'filter': 'all-others'}) }}">All except the above</a></li>
        </ul>
    </div>
    <div class="col-xs-12 col-sm-4 col-md-4">
        <h2>
            Our review partners
        </h2>
        <p>
            Got a site with Switch reviews? Want to join as a partner? <a href="{{ route('about') }}">Contact us</a>.
        </p>
        {% if ReviewPartnerList %}
            <table class="table table-striped table-responsive">
                <thead>
                    <tr>
                        <th class="text-left">Name</th>
                        <th class="text-center">View site</th>
                    </tr>
                </thead>
                <tbody>
                {% for item in ReviewPartnerList %}
                    <tr>
                        <td class="text-left">
                            <a href="{{ route('reviews.site', {'linkTitle': item.link_title}) }}">
                                {{ item.name }}
                            </a>
                        </td>
                        <td class="text-center">
                            <a href="{{ item.url }}" target="_blank">View site</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>Could not display review partners.</p>
        {% endif %}
    </div>
</div>

{% endblock page_body %}
