<table class="table table-striped table-responsive">
    <thead>
    <tr>
        <th>Game</th>
        <th class="text-center">Rating</th>
        <th class="text-right">Reviews</th>
    </tr>
    </thead>
    <tbody>
    {% for item in topRatedList %}
        <tr>
            <td>
                <a href="{{ route('game.show', {'id': item.id, 'title': item.link_title}) }}">
                    {{ item.title }}
                </a>
            </td>
            <td class="text-center">
                {{ item.rating_avg }}
            </td>
            <td class="text-right">
                {{ item.review_count }}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
