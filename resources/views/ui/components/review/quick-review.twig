{% macro render(review, withTitles=false, version='b5') %}
    {% import 'ui/components/rating/badge.twig' as rating %}

    {% if withTitles %}
        <div class="row quick-reviews-title">
            <div class="col-md-12">
                <a href="{{ route('game.show', {'id': review.game.id, 'linkTitle': review.game.link_title}) }}">
                    {{ review.game.title }}
                </a>
            </div>
        </div>
    {% endif %}

    <div class="row quick-reviews-header">
        <div class="col-md-4 col-sm-4 col-xs-4">
            {{ review.created_at|date('jS M Y') }}
        </div>
        <div class="col-md-6 col-sm-6 col-xs-6">
            {{ review.user.display_name }}
        </div>
        <div class="col-md-2 col-sm-2 col-xs-2">
            {{ rating.score(review.review_score, 'h6', version) }}
        </div>
    </div>

    <div class="row quick-reviews-body">
        <div class="col-md-12">
            {{ review.review_body|raw }}
        </div>
    </div>
{% endmacro %}
