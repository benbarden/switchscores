{% macro render(name, label, categories, selected, required=false) %}
    {# --------------------
       BOOTSTRAP 5 VERSION
       -------------------- #}

    <div class="mb-3">
        {% if label %}
            <label for="{{ name }}" class="form-label">
                {{ label }}{% if required %} *{% endif %}
            </label>
        {% endif %}

        <select id="{{ name }}" name="{{ name }}" class="form-select" {% if required %}required{% endif %}>
            <option value=""></option>

            {% for item in categories %}
                <option value="{{ item.id }}"
                        {% if selected == item.id %}selected{% endif %}>
                    {{ item.name }}
                </option>

                {% if item.children %}
                    {% for child in item.children %}
                        <option value="{{ child.id }}"
                                {% if selected == child.id %}selected{% endif %}>
                            &nbsp;&nbsp;&nbsp;&nbsp;{{ child.name }}
                        </option>
                    {% endfor %}
                {% endif %}
            {% endfor %}
        </select>
    </div>
{% endmacro %}


{% macro renderB5Horizontal(name, label, categories, selected, required=false) %}
    {# ---------------------------------
       BOOTSTRAP 5 HORIZONTAL VERSION
       --------------------------------- #}

    <div class="row mb-3">
        {% if label %}
            <label for="{{ name }}" class="col-md-3 col-form-label">
                {{ label }}{% if required %} *{% endif %}
            </label>
        {% endif %}

        <div class="col-md-6">
            <select id="{{ name }}" class="form-select" name="{{ name }}" {% if required %}required{% endif %}>
                <option value=""></option>

                {% for item in categories %}
                    <option value="{{ item.id }}"
                            {% if selected == item.id %}selected{% endif %}>
                        {{ item.name }}
                    </option>

                    {% if item.children %}
                        {% for child in item.children %}
                            <option value="{{ child.id }}"
                                    {% if selected == child.id %}selected{% endif %}>
                                &nbsp;&nbsp;&nbsp;&nbsp;{{ child.name }}
                            </option>
                        {% endfor %}
                    {% endif %}
                {% endfor %}
            </select>
        </div>
    </div>
{% endmacro %}
