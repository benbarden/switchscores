{% macro delisted(scoreSize='h4', version='b5') %}
    {% if version == 'b3' %}
        {% set defaultClass = 'label label-default' %}
    {% else %}
        {% set defaultClass = 'badge bg-secondary' %}
    {% endif %}
    <span class="{{ scoreSize }} {{ defaultClass }} switch-rating-badge">De-listed</span>
{% endmacro %}

{% macro tbc(reviewCount=null, scoreSize='h4', version='b5', hideReviewText=false) %}
    {% if reviewCount is not null %}
        {% set badgeText = reviewCount ~ '/3' %}
    {% else %}
        {% set badgeText = 'TBC' %}
    {% endif %}

    {% if version == 'b3' %}
        {% set infoClass    = 'label label-info' %}
        {% set defaultClass = 'label label-default' %}
    {% else %}
        {% set infoClass    = 'badge bg-info' %}
        {% set defaultClass = 'badge bg-secondary' %}
    {% endif %}

    {% if reviewCount is not null and reviewCount > 0 and reviewCount < 3 %}
        {% set badgeClass = infoClass %}
    {% else %}
        {% set badgeClass = defaultClass %}
    {% endif %}

    <span class="{{ scoreSize }} {{ badgeClass }} switch-rating-badge">
        {{ badgeText }}
    </span>
    {% if reviewCount is not null and not hideReviewText %}
        <br>
        <span class="text-center center-block"><small>reviews</small></span>
    {% endif %}
{% endmacro %}
