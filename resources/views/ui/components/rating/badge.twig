{% macro score(score, scoreSize='h4', version='b5') %}
    {% if version == 'b3' %}
        {% set successClass = 'label label-success' %}
        {% set warningClass = 'label label-warning' %}
        {% set dangerClass  = 'label label-danger' %}
    {% else %}
        {% set successClass = 'badge bg-success' %}
        {% set warningClass = 'badge bg-warning' %}
        {% set dangerClass  = 'badge bg-danger' %}
    {% endif %}

    {% if score > 7.9 %}
        <span class="{{ scoreSize }} {{ successClass }} switch-rating-badge">{{ score }}</span>
    {% elseif score > 5.9 %}
        <span class="{{ scoreSize }} {{ warningClass }} switch-rating-badge">{{ score }}</span>
    {% else %}
        <span class="{{ scoreSize }} {{ dangerClass }} switch-rating-badge">{{ score }}</span>
    {% endif %}
{% endmacro %}

{% macro circle(score, scoreSize='h4', version='b5') %}
    {% if version == 'b3' %}
        {% set successClass = 'label-success' %}
