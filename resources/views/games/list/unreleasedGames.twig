{% extends 'theme/wos/base.twig' %}

{% set crumbNav = [{'url': route('games.landing'), 'text': 'Games'}, {'text': 'Unreleased games'}] %}

{% block page_body %}

<div class="row">
    <div class="col-xs-12 col-sm-9">
        <p>
            This page lists Nintendo Switch games that have not been released in your region.
            Some of these may be given a release date in the future. In that case, they
            will move to the Released games list or the Upcoming list.
        </p>

        {% include 'games/list/moreLists.twig' with {'thisPage': 'unreleased'} %}

        {% for item in UpcomingLists %}
            <h2>{{ item.MainTitle }}</h2>
            {% include 'common/tables/upcoming-games.twig' with {'GamesList': item.List} %}
        {% endfor %}
    </div>
    <div class="col-xs-12 col-sm-3">
        <h3>Stats</h3>
        <table class="table table-striped table-condensed table-responsive">
            {% for item in UpcomingLists %}
                <tr>
                    <td>{{ item.ShortTitle }}</td>
                    <td class="text-right"><strong>{{ item.List.count }}</strong></td>
                </tr>
            {% endfor %}
        </table>
    </div>
</div>


{% endblock page_body %}
