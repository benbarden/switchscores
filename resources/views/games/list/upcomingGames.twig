{% extends 'theme/wos/base.twig' %}

{% block page_body %}

<h1>{{ PageTitle }}</h1>

<div class="row">
    <div class="col-xs-12 col-sm-9">
        <p>
            This page lists Nintendo Switch games that are planned but not yet released.
            As games are released, theyâ€™ll move to the
            <a href="{{ route('games.list.released') }}">released Switch games index</a>.
        </p>

        {% include 'games/list/moreLists.twig' with {'thisPage': 'upcoming'} %}

        {% for item in UpcomingLists %}
            <h2>{{ item.MainTitle }}</h2>
            {% include 'common/tables/upcoming-games.twig' with {'GamesList': item.List} %}
        {% endfor %}
    </div>
    <div class="col-xs-12 col-sm-3">
        <h3>Stats</h3>
        <table class="table table-striped table-condensed table-responsive">
            {% for item in UpcomingLists %}
                <tr>
                    <td>{{ item.ShortTitle }}</td>
                    <td class="text-right"><strong>{{ item.List.count }}</strong></td>
                </tr>
            {% endfor %}
            <tr>
                <td>Total upcoming games</td>
                <td class="text-right">
                    {{ UpcomingGamesCount }}
                </td>
            </tr>
        </table>
    </div>
</div>


{% endblock page_body %}
