{% extends 'theme/wos/base.twig' %}

{% set crumbNav = [{'url': route('games.landing'), 'text': 'Games'}, {'text': 'Upcoming games'}] %}

{% block page_body %}

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-9">
        <p>
            This page lists Nintendo Switch games that are planned but not yet released.
            As games are released, theyâ€™ll move to the
            <a href="{{ route('games.list.released') }}">released Switch games index</a>.
        </p>

        <h2>{{ item.MainTitle }}</h2>
        {% for item in UpcomingGames %}
            {% include 'games/layouts/miniGridItem.twig' with {'item': item} %}
        {% endfor %}
    </div>
    <div class="col-xs-12 col-sm-12 col-md-3" style="background: #f9f9f9;">

        {% if FeaturedGames|length %}
        <h2>Featured</h2>
        <div class="row">
            <div class="col-sm-12 col-md-12">
                <div class="row">
                    {% for item in FeaturedGames %}
                    <div class="col-sm-12 col-md-12 col-lg-12" style="min-height: 200px; padding: 5px 2px; text-align: center;">
                        {%
                        include 'games/layouts/cleanGridItem.twig'
                        with {
                        'item': item,
                        'ShowPageRank': false,
                        'PageRank': 0
                        }
                        %}
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        {% endif %}

    </div>
</div>


{% endblock page_body %}
