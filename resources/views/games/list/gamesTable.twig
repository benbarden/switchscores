{% if GamesList %}
    <table class="table table-striped table-condensed table-responsive">
        <thead>
            <tr>
                <th style="text-align: left;">Title</th>
                <th class="text-left">Features</th>
                <th style="text-align: left;">Release date<br>(Europe)</th>
                <th style="text-align: center;">Players</th>
                <th style="text-align: right;">eShop price</th>
                <th style="text-align: right;">Avg rating</th>
                <th style="text-align: right;">Total reviews</th>
            </tr>
        </thead>
        <tbody>
            {% for item in GamesList %}
                <tr>
                    <td style="text-align: left;">
                        <a href="{{ route('game.show', {'id': item.id, 'title': item.link_title}) }}">
                            {{ item.title }}
                        </a>
                    </td>
                    <td class="text-left">
                        {% if item.image_count > 0 %}
                            <span class="glyphicon glyphicon-picture" aria-hidden="true" title="Game has images"></span>
                        {% endif %}
                        &nbsp;
                        {% if item.overview %}
                            <span class="glyphicon glyphicon-align-left" aria-hidden="true" title="Game has an overview"></span>
                        {% endif %}
                    </td>
                    <td style="text-align: left;">
                        {% if item.upcoming == 1 %}
                            {{ item.upcoming_date }}
                        {% else %}
                            {{ item.release_date }}
                        {% endif %}
                    </td>
                    <td style="text-align: center;">
                        {{ item.players }}
                    </td>
                    <td style="text-align: right;">
                        {% if item.price_eshop %}
                            &pound;{{ item.price_eshop }}
                        {% endif %}
                    </td>
                    <td style="text-align: right;">
                        {{ item.rating_avg }}
                    </td>
                    <td style="text-align: right;">
                        {{ item.review_count }}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <p><em>{{ GamesList.count }} games.</em></p>
{% else %}
    <p>No games to display!</p>
{% endif %}