{% extends 'theme/wos/base.twig' %}

{% set crumbNav = [{'url': route('games.landing'), 'text': 'Games'}, {'url': route('games.browse.byTitle.landing'), 'text': 'Browse by title'}, {'text': 'Games: '~GameLetter}] %}

{% block page_body %}

<p>
    A list of Nintendo Switch games, starting with {{ GameLetter }} and sorted alphabetically.
</p>

{% if GamesList|length %}
    <div class="row">
        {% for item in GamesList %}
            <div class="col-xs-12 col-sm-12 col-md-4">
                {% include 'games/layouts/miniItem.twig' with {'item': item, 'cfgSmallTitles': 'Y'} %}
            </div>
        {% endfor %}
    </div>
{% else %}
    <p>No games found!</p>
{% endif %}

{% endblock page_body %}
