<div class="row">
    <div class="col-sm-12 col-md-12">
        <h2>User reviews</h2>
        {% if auth_user() %}
        <p>
            Add your review at <a href="{{ route('user.reviews.list') }}">My reviews</a>.
        </p>
        {% endif %}
        {% if ReviewList.count %}
            <table class="table table-striped table-condensed table-responsive">
                {% for item in ReviewList %}
                    <tr style="background: #565656; color: #fff;">
                        <td>
                            <span style="font-weight: bold;">Author:</span>
                            {{ item.user.display_name }}
                        </td>
                        <td>
                            <span style="font-weight: bold;">Quick rating:</span>
                            {{ item.quickRating.rating_desc }}
                        </td>
                        <td>
                            <span style="font-weight: bold;">Score:</span>
                            {{ item.review_score }}/10
                        </td>
                        <td>
                            <span style="font-weight: bold;">Date:</span>
                            {{ item.created_at|date('jS M Y') }}
                        </td>
                    </tr>
                    {% if item.review_body %}
                        <tr>
                            <td colspan="8">
                                {{ item.review_body|raw }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">
                                &nbsp;
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
            </table>
        {% else %}
            <!-- No reviews -->
        {% endif %}
    </div>
</div>
