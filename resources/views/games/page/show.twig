{% extends 'theme/wos/base.twig' %}

{% set crumbNav = [{'url': route('games.landing'), 'text': 'Games'}, {'text': GameData.title}] %}

{% set hideHeader = true %}

{% block page_body %}

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-2 text-center">
        {{ ImageHelper.packshotHtml(GameData, 'game-show') }}
    </div>
    <div class="col-xs-12 col-sm-12 col-md-6">
        <h1>{{ GameData.title }}</h1>
        <div class="row">
            <div class="col-md-2">
                {% if exception is null %}
                    <a class="twitter-share-button" data-size="large"
                       href="https://twitter.com/intent/tweet?text={{ PageTitle }}&via=worldofswitch">Tweet</a>
                {% endif %}
            </div>
            <div class="col-md-10">
                {% if auth_user() %}
                    <a class="btn btn-default btn-primary btn-xs" href="{{ route('user.collection.add', {'gameId': GameId}) }}">Add to Games collection</a>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="game-rating col-xs-12 col-sm-12 col-md-4">
        {% if GameData.game_rank %}
            <p class="h1">
                <span>Rank</span>
                <strong>{{ GameData.game_rank }}<small>/{{ RankMaximum }}</small></strong>
            </p>
        {% endif %}
        {% if GameData.rating_avg %}
            <p class="h1">
                <span>Average rating</span>
                <strong>{{ GameData.rating_avg }}</strong>
            </p>
        {% endif %}
    </div>
</div>

<div class="row">
    <div class="col-sm-12 col-md-6">
        <h2>Game info</h2>
        {% include 'games/page/infobox.twig' with {'GameData': GameData, 'NewsInfoBox': 'N', 'ReleaseDateInfo': ReleaseDateInfo} %}
        {% include 'games/page/images.twig' with {'GameTitle': GameData.title, 'VideoUrl': GameData.video_url, 'MediaFolder': GameData.media_folder, 'GameImages': GameData.images} %}
    </div>
    <div class="col-sm-12 col-md-6">
        {% include 'games/page/reviews.twig' with {'GameReviews': GameReviews} %}
    </div>
</div>

{% include 'games/page/userReviews.twig' with {'ReviewList': GameReviewUserList} %}

{% endblock page_body %}
