<div class="row" style="margin-top: 16px;">

    <div class="col-sm-12 col-md-12 col-lg-12">
        {% include 'modules/game/packshot/header.twig' with {'item': item} %}
    </div>

</div>

<div class="row" style="margin-top: 8px;">

    <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
        <span class="h5">
            <a href="{{ route('game.show', {'id': item.id, 'linkTitle': item.link_title}) }}">{{ item.title }}</a>
        </span>
        <br>
        {% if item.eu_is_released == 1 %}
            <span class="h6">
                Released: {% include 'modules/game/release-date.twig' with {'item': item} %}
            </span>
        {% elseif item.eu_release_date %}
            <span class="h6">
                To be released: {% include 'modules/game/release-date.twig' with {'item': item} %}
            </span>
        {% else %}
            <span class="h6">
                Unreleased
            </span>
        {% endif %}
        {% if item.ExtraDetailLine != '' %}
            <br>
            <span class="h6">
                {{ item.ExtraDetailLine }}
            </span>
        {% endif %}
        {% if ShowOnSale == 'Y' %}
            <br>
            <span class="h5">
                <s><span class="h4">&pound;{{ item.price_eshop }}</span></s>
                <span class="h4" style="font-weight: bold;">&pound;{{ item.price_eshop_discounted }}</span>
                <span style="color: #f00;">{{ item.price_eshop_discount_pc }}% off</span>
            </span>
        {% elseif item.price_eshop %}
            {% include 'modules/game/price/standard.twig' %}
        {% endif %}
    </div>
    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
        <div class="pull-right">
            {% if item.rating_avg %}
                {% if item.game_rank %}
                    {% include 'modules/rating/badge.twig' with {'score': item.rating_avg, 'scoreSize': 'h5'} %}
                {% elseif item.format_digital == 'De-listed' %}
                    {% include 'modules/rating/badge-delisted.twig' with {'scoreSize': 'h6'} %}
                {% elseif item.eu_is_released == 1 %}
                    {% include 'modules/rating/badge-tbc.twig' with {'scoreSize': 'h5', 'reviewCount': item.review_count} %}
                {% endif %}
            {% elseif item.eu_is_released == 1 %}
                {% include 'modules/rating/badge-tbc.twig' with {'scoreSize': 'h5', 'reviewCount': item.review_count} %}
            {% endif %}
        </div>
        {% if item.eu_is_released == 1 %}
        {% endif %}
    </div>

</div>
