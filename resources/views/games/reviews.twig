{% if GameReviews %}
    <h2>Reviews</h2>
    {% if GameReviews.count > 0 %}
        <table class="table table-striped table-condensed table-responsive">
            <tr>
                <th>Site</th>
                <th>Rating (out of 10)</th>
                <th>Link</th>
            </tr>
            {% for Review in GameReviews %}
                <tr>
                    <td>{{ Review.site.name }}</td>
                    <td>
                        {% if Review.rating_normalised %}
                            {{ Review.rating_normalised }}
                            {% if Review.site.rating_scale != 10 %}
                            <br>
                            <small>
                                Actual: {{ Review.rating_original }}/{{ Review.site.rating_scale }}
                            </small>
                            {% endif %}
                        {% else %}
                            N/A
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ Review.url }}" target="_blank">Read review</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    {% else %}
        <p>No reviews yet.</p>
    {% endif %}
{% endif %}
