{% if GameImages or VideoUrl %}
    {# http://fotorama.io/customize/ #}
    <link href="http://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama.css" rel="stylesheet">
    <script src="http://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama.js"></script>
    <div class="fotorama"
         data-width="100%"
         data-ratio="400/225"
         data-minwidth="150"
         data-maxwidth="640"
         data-minheight="75"
         data-maxheight="100%"
         data-nav="thumbs">
        {% if VideoUrl %}
        <a href="{{ VideoUrl }}">{{ GameTitle }}</a>
        {% endif %}
        {% if GameImages %}
        {% for image in GameImages %}
            <img src="{{ MediaFolder }}{{ image.url }}" width="150" height="125">
        {% endfor %}
        {% endif %}
    </div>
{% endif %}
