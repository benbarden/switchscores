{% extends 'theme/wos/base.twig' %}

{% if DisplayMode == 'category' %}
    {% set crumbNav = [
        {'url': route('news.landing'), 'text': 'News'},
        {'text': PageTitle}
    ] %}
{% else %}
    {% set crumbNav = [
        {'text': 'News'}
    ] %}
{% endif %}

{% block page_body %}

{% for newsItem in NewsList|batch(3, null) %}
    <div class="row">
        {% for item in newsItem %}
            {% include 'news/tiled-item.twig' with {'item': item, 'batchOverride': 3} %}
        {% endfor %}
    </div>
{% endfor %}

<div class="row text-center">
    {{ NewsList.links|raw }}
</div>

{% endblock page_body %}
