{% extends 'theme/wos/staff/clean-wide.twig' %}

{% set crumbNav = [{'text': PageTitle}] %}

{% block page_inner %}

<div class="row">

    <div class="col-md-4">

        <h2>Differences - To review</h2>

        <table class="table">
            <tbody>
            <tr>
                <td>
                    EU release date - Nintendo.co.uk API
                </td>
                <td class="text-right">
                    <span class="h4">{{ ReleaseDateEUNintendoCoUkDifferenceCount }}</span>
                </td>
            </tr>
            <tr>
                <td>
                    EU release date - Wikipedia
                </td>
                <td class="text-right">
                    <span class="h4">{{ ReleaseDateEUWikipediaDifferenceCount }}</span>
                </td>
            </tr>
            <tr>
                <td>
                    US release date - Wikipedia
                </td>
                <td class="text-right">
                    <span class="h4">{{ ReleaseDateUSWikipediaDifferenceCount }}</span>
                </td>
            </tr>
            <tr>
                <td>
                    JP release date - Wikipedia
                </td>
                <td class="text-right">
                    <span class="h4">{{ ReleaseDateJPWikipediaDifferenceCount }}</span>
                </td>
            </tr>
            </tbody>
        </table>

    </div>

    <div class="col-md-4">

        <h2>Tools</h2>

        <h3>Nintendo.co.uk API</h3>
        <table class="table">
            <tbody>
            <tr>
                <td>
                    <a href="{{ route('staff.data-sources.tools.nintendo-co-uk.importParseLink') }}">DSNintendoCoUkImportParseLink</a>
                    <br>
                    <small>Imports and parses data, and links it to games</small>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="{{ route('staff.data-sources.tools.nintendo-co-uk.updateGames') }}">DSNintendoCoUkUpdateGames</a>
                    <br>
                    <small>Updates games with data</small>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="{{ route('staff.data-sources.tools.nintendo-co-uk.downloadImages') }}">DSNintendoCoUkDownloadImages</a>
                    <br>
                    <small>Downloads images</small>
                </td>
            </tr>
            </tbody>
        </table>

        <h3>Wikipedia</h3>
        <table class="table">
            <tbody>
            <tr>
                <td>
                    <a href="{{ route('staff.data-sources.tools.wikipedia.importParseLink') }}">DSWikipediaImportParseLink</a>
                    <br>
                    <small>Imports and parses data, and links it to games</small>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="{{ route('staff.data-sources.tools.wikipedia.updateGames') }}">DSWikipediaUpdateGames</a>
                    <br>
                    <small>Updates games with data</small>
                </td>
            </tr>
            </tbody>
        </table>

    </div>

    <div class="col-md-4">

        <h2>Stats</h2>

        <h3>Nintendo.co.uk API</h3>
        <table class="table">
            <tbody>
            <tr>
                <td>
                    <a href="{{ route('staff.data-sources.nintendo-co-uk.unlinked') }}">Unlinked items</a>
                </td>
                <td class="text-right">
                    <a href="{{ route('staff.data-sources.nintendo-co-uk.unlinked') }}" class="h4">{{ NintendoCoUkUnlinkedCount }}</a>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="{{ route('staff.data-sources.nintendo-co-uk.ignored') }}">Ignored items</a>
                </td>
                <td class="text-right">
                    <a href="{{ route('staff.data-sources.nintendo-co-uk.ignored') }}" class="h4">{{ NintendoCoUkIgnoredCount }}</a>
                </td>
            </tr>
            </tbody>
        </table>

        <h3>Wikipedia</h3>
        <table class="table">
            <tbody>
            <tr>
                <td>
                    <a href="{{ route('staff.data-sources.wikipedia.unlinked') }}">Unlinked items</a>
                </td>
                <td class="text-right">
                    <a href="{{ route('staff.data-sources.wikipedia.unlinked') }}" class="h4">{{ WikipediaUnlinkedCount }}</a>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="{{ route('staff.data-sources.wikipedia.ignored') }}">Ignored items</a>
                </td>
                <td class="text-right">
                    <a href="{{ route('staff.data-sources.wikipedia.ignored') }}" class="h4">{{ WikipediaIgnoredCount }}</a>
                </td>
            </tr>
            </tbody>
        </table>

        <h2>Import totals</h2>

        <table class="table">
            <thead>
            <tr>
                <th>Details</th>
                <th class="text-center">Raw</th>
                <th class="text-center">Parsed</th>
            </tr>
            </thead>
            <tbody>
            {% for item in DataSources %}
                <tr>
                    <td>
                        {{ item.name }}
                        <br>
                        <small>
                            ID: {{ item.id }} -
                            Method: {{ item.importMethodDesc() }}
                        </small>
                    </td>
                    <td class="text-center">
                        <a href="{{ route('staff.data-sources.list-raw', {'sourceId': item.id}) }}">
                            {{ item.itemsRaw().count() }}
                        </a>
                    </td>
                    <td class="text-center">
                        {{ item.itemsParsed().count() }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

</div>

{% endblock page_inner %}
