{% include 'common/form-errors.twig' %}
<form role="form" method="post" action="{{ formSubmitAction }}">
    {{ csrf_field() }}

    <div class="row">

        <div class="col-md-9">

            <p>
                This screen allows you to link a title from Wikipedia to a game in the database.
            </p>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Title from Wikipedia</label>
                <div class="col-sm-4">
                    <div class="form-text">{{ DSParsedItem.title }}</div>
                </div>
            </div>

            <div class="row mb-6">
                <label for="game_id" class="col-md-2 col-form-label">Game</label>
                <div class="col-sm-6">
                    <select id="game_id" class="form-select" name="game_id">
                        <option value="">&nbsp;</option>
                        {% for item in GameList %}
                            <option value="{{ item.id }}">{{ item.title }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>

        </div>

        <div class="col-md-3">

        </div>

    </div>

    {% include 'common/forms/submit.twig' %}
</form>
