{% extends 'theme/staff-b5/layout-default.twig' %}

{% block page_inner %}

<div class="alert alert-warning" role="alert">
    <strong>Warning!</strong> You are about to delete the news item: <strong>{{ NewsData.title }}</strong> (id: {{ NewsId }})
    <br>There is no option to undo the deletion if you proceed!
</div>

<form class="form-horizontal" role="form" method="post" action="{{ route('staff.news.delete', {'newsId': NewsId}) }}">
    {{ csrf_field() }}

    <div class="form-group">
        <div class="col-md-8 col-md-offset-4">
            <button type="submit" class="btn outline btn-danger">
                Confirm deletion
            </button>
        </div>
    </div>
</form>

{% endblock page_inner %}
