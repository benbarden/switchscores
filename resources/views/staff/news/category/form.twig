{% include 'common/form-errors.twig' %}
<form class="form-horizontal" role="form" method="post" action="{{ formSubmitAction }}">
    {{ csrf_field() }}

    <div class="form-group">
        <label for="name" class="col-md-4 control-label">Name</label>
        <div class="col-md-6">
            <input id="name" type="text" class="form-control" name="name" maxlength="100" required autofocus>
        </div>
        <div class="col-md-2"></div>
    </div>

    <div class="form-group">
        <label for="link_name" class="col-md-4 control-label">Link name</label>
        <div class="col-md-6">
            <input id="link_name" type="text" class="form-control" name="link_name" maxlength="100" required autofocus>
        </div>
        <div class="col-md-2"></div>
    </div>

    <div class="form-group">
        <div class="col-md-12 text-center">
            <button type="submit" class="btn outline btn-primary btn-lg">
                Submit
            </button>
        </div>
    </div>
</form>
