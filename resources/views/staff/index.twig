{% extends 'theme/wos/staff/clean-wide.twig' %}

{% set crumbNav = [{'text': 'Index'}] %}

{% block page_inner %}

{% if auth_user().isOwner() %}
    {% if SiteAlertLatest %}
        <div class="row">

            <div class="col-md-12">
                <div class="alert alert-warning" role="alert">
                    <a href="{{ route('admin.action-lists.site-alert-errors') }}">Latest site alert</a>:
                    {{ SiteAlertLatest.created_at|date('d-M-Y @ H:i') }}:
                    <strong>{{ SiteAlertLatest.detail }}</strong> - Source: {{ SiteAlertLatest.source }}
                </div>
            </div>

        </div>
    {% endif %}
{% endif %}

<div class="row">

    <div class="col-md-4">

        {% if auth_user().hasRole('Games manager') or auth_user().hasRole('Reviews manager') or auth_user().isOwner() %}
        <h2>Action lists</h2>

        <table class="table">
            <tbody>
            {% if auth_user().hasRole('Reviews manager') or auth_user().isOwner() %}
            <tr>
                <td>
                    <a href="{{ route('staff.reviews.feed-items.list') }}">Feeds: Reviews</a>
                </td>
                <td class="text-right">
                    <a href="{{ route('staff.reviews.feed-items.list') }}" class="h4">{{ UnprocessedFeedReviewItemsCount }}</a>
                </td>
            </tr>
            {% endif %}
            {% if auth_user().hasRole('Wikipedia manager') or auth_user().isOwner() %}
            <tr>
                <td>
                    <a href="{{ route('staff.wikipedia.wiki-updates.list-all-pending') }}">Wiki updates</a>
                </td>
                <td class="text-right">
                    <a href="{{ route('staff.wikipedia.wiki-updates.list-all-pending') }}" class="h4">{{ PendingFeedGameItemsCount }}</a>
                </td>
            </tr>
            {% endif %}
            {% if auth_user().hasRole('Reviews manager') or auth_user().isOwner() %}
            <tr>
                <td>
                    <a href="{{ route('staff.reviews.quick-reviews.list') }}">Quick reviews</a>
                </td>
                <td class="text-right">
                    <a href="{{ route('staff.reviews.quick-reviews.list') }}" class="h4">{{ PendingQuickReviewCount }}</a>
                </td>
            </tr>
            {% endif %}
            </tbody>
        </table>
        {% endif %}

        <h2>Help</h2>
        <p>
            Need help with the staff pages? Contact Ben via
            <a href="https://twitter.com/switchscores">Twitter</a> or <a href="mailto:ben@switchscores.com">email</a>.
        </p>

    </div>

    <div class="col-md-4">

        {% if auth_user().hasRole('Reviews manager') or auth_user().isOwner() %}
            <h2>Recent imports</h2>
            {% if ReviewFeedImportList.count > 0 %}
                <table class="table data-sortable table-responsive">
                    <thead>
                    <tr>
                        <th class="text-center">Day of week</th>
                        <th class="text-center">Items</th>
                        <th class="text-center">Date</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in ReviewFeedImportList %}
                        <tr>
                            <td class="text-center">
                                {{ item.created_at|date('l') }}
                            </td>
                            <td class="text-center">
                                <a href="{{ route('staff.reviews.feed-imports.item-list', {'feedImport': item}) }}">
                                    {{ item.feedItems.count() }}
                                </a>
                            </td>
                            <td class="text-center">
                                {{ item.created_at|date('Y-m-d') }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p>No items found!</p>
            {% endif %}
            <p><a href="{{ route('staff.reviews.feed-imports.list') }}">View all imports</a>.</p>
        {% endif %}

    </div>

    <div class="col-md-4">

        {% if auth_user().isOwner() %}
        <h2>Owner tools</h2>

        <table class="table">
            <tbody>
                <tr>
                    <td>
                        <a href="{{ route('staff.eshop.feed-items-europe.list') }}/no-link">eShop Europe: total unlinked items</a>
                    </td>
                    <td class="text-right">
                        <a href="{{ route('staff.eshop.feed-items-europe.list') }}/no-link" class="h4">{{ EshopEuropeUnlinkedCount }}</a>
                    </td>
                </tr>
                <tr>
                    <td>
                        <a href="{{ route('owner.user.list') }}">Registered users</a>
                    </td>
                    <td class="text-right">
                        <a href="{{ route('owner.user.list') }}" class="h4">{{ RegisteredUserCount }}</a>
                    </td>
                </tr>
                <tr>
                    <td>
                        <a href="{{ route('admin.action-lists.site-alert-errors') }}">Site alert errors</a>
                    </td>
                    <td class="text-right">
                        <a href="{{ route('admin.action-lists.site-alert-errors') }}" class="h4">{{ SiteAlertErrorCount }}</a>
                    </td>
                </tr>
            </tbody>
        </table>

        <h2>Owner links</h2>
        <table class="table">
            <tbody>
                <tr>
                    <td>
                        <a href="{{ route('owner.audit.index') }}">Audit</a>
                    </td>
                </tr>
                <tr>
                    <td>
                        <a href="{{ route('admin.games.list') }}">All games</a>
                    </td>
                </tr>
                <tr>
                    <td>
                        <a href="{{ route('owner.user.list') }}">Users</a>
                    </td>
                </tr>
                <tr>
                    <td>
                        <a href="{{ route('admin.news.list') }}">News</a>
                    </td>
                </tr>
                <tr>
                    <td>
                        <a href="{{ route('staff.stats.dashboard') }}">Stats</a>
                    </td>
                </tr>
            </tbody>
        </table>
        {% endif %}

    </div>

</div>

{% endblock page_inner %}
