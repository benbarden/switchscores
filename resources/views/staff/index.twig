{% extends 'theme/staff-b5/layout-default.twig' %}
{% import "ui/components/headings/heading.twig" as heading %}
{% import 'ui/components/table/row-link-stat.twig' as rowstat %}
{% import 'ui/components/game/packshots.twig' as packshots %}
{% import 'ui/components/links/game.twig' as gamelink %}

{% block page_inner %}

<div class="row">

    <div class="col-md-4">

        {{ heading.renderSlick('Submissions') }}

        <table class="table">
            <tbody>
            {% if auth_user().hasRole('Reviews manager') or auth_user().isOwner() %}
                {{ rowstat.renderB5(
                    'Review drafts', route('staff.reviews.review-drafts.showPending'), ReviewDraftUnprocessedCount
                ) }}
            {% endif %}
            {% if auth_user().hasRole('Reviews manager') or auth_user().isOwner() %}
                <tr>
                    <td>
                        <a href="{{ route('staff.reviews.quick-reviews.list') }}">Quick reviews</a>
                    </td>
                    <td class="text-end">
                        <a href="{{ route('staff.reviews.quick-reviews.list') }}" class="h4">{{ PendingQuickReviewCount }}</a>
                    </td>
                </tr>
            {% endif %}
            {% if auth_user().hasRole('Games manager') or auth_user().isOwner() %}
                <tr>
                    <td>
                        <a href="{{ route('staff.games.featured-games.list') }}">Featured games</a>
                    </td>
                    <td class="text-end">
                        <a href="{{ route('staff.games.featured-games.list') }}" class="h4">{{ PendingFeaturedGameCount }}</a>
                    </td>
                </tr>
            {% endif %}
            {% if auth_user().isOwner() %}
                <tr>
                    <td>
                        <a href="{{ route('staff.invite-code-request.list') }}">Invite code requests</a>
                    </td>
                    <td class="text-end">
                    </td>
                </tr>
                <tr>
                    <td>
                        Games company signups
                    </td>
                    <td class="text-end">
                        <span class="h4">{{ TotalGamesCompanySignups }}</span>
                    </td>
                </tr>
            {% endif %}
            </tbody>
        </table>

        {{ heading.renderSlick('Games to add') }}

        <table class="table">
            <tbody>
            {% if auth_user().hasRole('Games manager') or auth_user().isOwner() %}
                <tr>
                    <td>
                        <a href="{{ route('staff.games.release-hub.show')}}">Release hub</a>
                    </td>
                    <td class="text-end">
                        <a href="{{ route('staff.games.release-hub.show')}}" class="h4"></a>
                    </td>
                </tr>
            {% endif %}
            {% if auth_user().hasRole('Data source manager') or auth_user().isOwner() %}
                <tr>
                    <td>
                        <a href="{{ route('staff.data-sources.nintendo-co-uk.unlinked') }}">Nintendo.co.uk API: Unlinked items</a>
                    </td>
                    <td class="text-end">
                        <a href="{{ route('staff.data-sources.nintendo-co-uk.unlinked') }}" class="h4">{{ NintendoCoUkUnlinkedCount }}</a>
                    </td>
                </tr>
            {% endif %}
            </tbody>
        </table>

        {{ heading.renderSlick('Nintendo links') }}

        <table class="table">
            <tbody>
            <tr>
                <td>
                    <a href="{{ route('staff.games.list.showList', {'listType': 'no-nintendo-co-uk-link'}) }}">No Nintendo.co.uk link</a>
                </td>
                <td class="text-end">
                    <a href="{{ route('staff.games.list.showList', {'listType': 'no-nintendo-co-uk-link'}) }}" class="h4">{{ NoNintendoCoUkLinkCount }}</a>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="{{ route('staff.games.list.showList', {'listType': 'broken-nintendo-co-uk-link'}) }}">Broken Nintendo.co.uk link</a>
                </td>
                <td class="text-end">
                    <a href="{{ route('staff.games.list.showList', {'listType': 'broken-nintendo-co-uk-link'}) }}" class="h4">{{ BrokenNintendoCoUkLinkCount }}</a>
                </td>
            </tr>
            </tbody>
        </table>

        {{ heading.renderSlick('Missing data') }}

        <table class="table">
            <tbody>
            <tr>
                <td>
                    <a href="{{ route('staff.games.list.showList', {'listType': 'no-category-excluding-low-quality'}) }}">
                        No category (Excluding low quality)
                    </a>
                </td>
                <td class="text-end">
                    <span class="h4">{{ NoCategoryExcludingLowQualityCount }}</span>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="{{ route('staff.games.list.showList', {'listType': 'no-category-all'}) }}">
                        No category (All)
                    </a>
                </td>
                <td class="text-end">
                    <span class="h4">{{ NoCategoryAllCount }}</span>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="{{ route('staff.games.list.showList', {'listType': 'no-category-with-collection'}) }}">
                        No category with collection
                    </a>
                </td>
                <td class="text-end">
                    <span class="h4">{{ NoCategoryWithCollectionCount }}</span>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="{{ route('staff.partners.data-cleanup.games-with-missing-publisher') }}">Games with missing publisher</a>
                </td>
                <td class="text-end">
                    <a href="{{ route('staff.partners.data-cleanup.games-with-missing-publisher') }}" class="h4">{{ PublisherMissingCount }}</a>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="{{ route('staff.data-quality.duplicate-reviews') }}">Duplicate reviews</a>
                </td>
                <td class="text-end">
                    <a href="{{ route('staff.data-quality.duplicate-reviews') }}" class="h4">{{ DuplicateReviewsCount }}</a>
                </td>
            </tr>
            </tbody>
        </table>

        {{ heading.renderSlick('Invite codes') }}
        <table class="table">
            <tbody>
            <tr>
                <td>
                    <a href="{{ route('staff.invite-code.list') }}">Invite codes</a>
                </td>
                <td></td>
            </tr>
            </tbody>
        </table>

        {% if auth_user().isOwner() %}
            {{ heading.renderSlick('Owner links') }}
            <table class="table">
                <tbody>
                <tr>
                    <td>
                        <a href="{{ route('owner.user.list') }}">Registered users</a>
                    </td>
                    <td class="text-end">
                        <a href="{{ route('owner.user.list') }}" class="h4">{{ RegisteredUserCount }}</a>
                    </td>
                </tr>
                <tr>
                    <td>
                        <a href="{{ route('owner.activityLog') }}">Activity log</a>
                    </td>
                    <td></td>
                </tr>
                <tr>
                    <td>
                        <a href="{{ route('owner.audit.index') }}">Audit</a>
                    </td>
                    <td></td>
                </tr>
                <tr>
                    <td>
                        <a href="{{ route('staff.stats.dashboard') }}">Stats</a>
                    </td>
                    <td></td>
                </tr>
                </tbody>
            </table>
        {% endif %}

    </div>

    <div class="col-md-4">

        {% if auth_user().hasRole('Games manager') or auth_user().isOwner() %}
            {{ heading.renderSlick('Recently released') }}
            {% if RecentlyReleasedGames.count > 0 %}
                <div class="col-md-12">
                    {% for item in RecentlyReleasedGames %}
                        <div class="row" style="margin-top: 6px;">
                            <div class="col-md-3 col-sm-3 col-xs-3">
                                {{ packshots.square(item) }}
                            </div>
                            <div class="col-md-9 col-sm-9 col-xs-9">
                                {{ gamelink.title(item, 'staff') }}
                                <br>
                                <small>
                                    Released: {{ item.eu_release_date|date('d F Y') }}
                                </small>
                                {% if item.is_low_quality == 1 %}
                                    <br>
                                    <label class="badge bg-danger">Low quality</label>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p>No items found!</p>
            {% endif %}
            <p><a href="{{ route('staff.games.list.showList', {'listType': 'recently-released'}) }}">View all recently released games</a>.</p>
        {% endif %}

    </div>

    <div class="col-md-4">

        {% if auth_user().hasRole('Games manager') or auth_user().isOwner() %}
            {{ heading.renderSlick('Recently added') }}
            {% if RecentlyAddedGames.count > 0 %}
                <div class="col-md-12">
                    {% for item in RecentlyAddedGames %}
                        <div class="row" style="margin-top: 6px;">
                            <div class="col-md-3 col-sm-3 col-xs-3">
                                {{ packshots.square(item) }}
                            </div>
                            <div class="col-md-9 col-sm-9 col-xs-9">
                                {{ gamelink.title(item, 'staff') }}
                                <br>
                                <small>
                                    Added: {{ item.created_at|date('d M @ H:i') }}
                                </small>
                                {% if item.is_low_quality == 1 %}
                                    <br>
                                    <label class="badge bg-danger">Low quality</label>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p>No items found!</p>
            {% endif %}
            <p><a href="{{ route('staff.games.list.showList', {'listType': 'recently-added'}) }}">View all recently added games</a>.</p>
        {% endif %}

    </div>

</div>

{% endblock page_inner %}
