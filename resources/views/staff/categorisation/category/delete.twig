{% extends 'theme/wos/staff/clean-wide.twig' %}

{% block page_inner %}

<div class="alert alert-warning" role="alert">
    <strong>Warning!</strong> You are about to delete the following category: <strong>{{ CategoryData.name }}</strong>
    <br>There is no option to undo the deletion if you proceed!
</div>

<form class="form-horizontal" role="form" method="post" action="{{ route('staff.categorisation.category.delete', {'categoryId': CategoryId}) }}">
    {{ csrf_field() }}

    <div class="form-group">
        <div class="col-md-8 col-md-offset-4">
            <button type="submit" class="btn outline btn-danger">
                Confirm deletion
            </button>
        </div>
    </div>
</form>

{% endblock page_inner %}
