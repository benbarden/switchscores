{% extends 'theme/staff-b5/layout-default.twig' %}
{% import "ui/components/headings/heading.twig" as heading %}
{% import 'ui/components/table/row-link-stat.twig' as rowstat %}

{% block page_inner %}

    <div class="row">

        <div class="col-md-4">

            {{ heading.renderSlick('Action lists') }}
            <table class="table">
                <tbody>
                <tr>
                    <td>
                        <a href="{{ route('staff.games.list.showList', {'listType': 'no-category-all'}) }}">
                            No category (All games)
                        </a>
                    </td>
                    <td class="text-end">
                        <span class="h4">{{ NoCategoryCount }}</span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <a href="{{ route('staff.games.list.showList', {'listType': 'no-category-with-collection'}) }}">
                            No category with collection
                        </a>
                    </td>
                    <td class="text-end">
                        <span class="h4">{{ NoCategoryWithCollectionCount }}</span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <a href="{{ route('staff.games.list.showList', {'listType': 'no-category-with-reviews'}) }}">
                            No category with reviews
                        </a>
                    </td>
                    <td class="text-end">
                        <span class="h4">{{ NoCategoryWithReviewsCount }}</span>
                    </td>
                </tr>
                </tbody>
            </table>

            {{ heading.renderSlick('Navigation') }}
            <table class="table">
                <tbody>
                <tr>
                    <td>
                        <a href="{{ route('staff.categorisation.category.list') }}">Categories</a>
                    </td>
                </tr>
                <tr>
                    <td>
                        <a href="{{ route('staff.categorisation.tag.list') }}">Tags</a>
                    </td>
                </tr>
                <tr>
                    <td>
                        <a href="{{ route('staff.categorisation.game-series.list') }}">Series</a>
                    </td>
                </tr>
                <tr>
                    <td>
                        <a href="{{ route('staff.categorisation.game-collection.list') }}">Collections</a>
                    </td>
                </tr>
                </tbody>
            </table>

        </div>

        <div class="col-md-4">

            {{ heading.renderSlick('Bulk tools') }}
            <table class="table">
                <tbody>
                    {{ rowstat.renderB5(
                        'Bulk move from category A to category B', route('staff.categorisation.bulk-tools.move-category-to-category')
                    ) }}
                    {{ rowstat.renderB5(
                        'Bulk add tag to games in category', route('staff.categorisation.bulk-tools.add-tag-to-games-in-category')
                    ) }}
                    {{ rowstat.renderB5(
                        'Bulk move games with tag A to category B', route('staff.categorisation.bulk-tools.move-games-with-tag-to-category')
                    ) }}
                    {{ rowstat.renderB5(
                        'Bulk untag games with tag', route('staff.categorisation.bulk-tools.untag-games-with-tag')
                    ) }}
                    {{ rowstat.renderB5(
                        'Bulk untag games with category and tag', route('staff.categorisation.bulk-tools.untag-games-with-category-and-tag')
                    ) }}
                    {{ rowstat.renderB5(
                        'Bulk add tag A to games with tag B',
                        route('staff.categorisation.bulk-tools.add-tag-to-games-with-tag')
                    ) }}
                    {{ rowstat.renderB5(
                        'Bulk set category verification',
                        route('staff.categorisation.bulk-tools.set-category-verification')
                    ) }}
                </tbody>
            </table>

        </div>

        <div class="col-md-4">

            {{ heading.renderSlick('Tag category progress') }}
            <p class="text-muted small">Total games: {{ TotalGames }}</p>

            {% for item in TagCategoryProgress %}
                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-1">
                        <span>{{ item.name }}</span>
                        <span class="small">
                            {{ item.games_with_tag }} / {{ TotalGames }}
                            ({{ item.percentage }}%)
                        </span>
                    </div>
                    <div class="progress" style="height: 20px;">
                        <div class="progress-bar bg-success" role="progressbar"
                             style="width: {{ item.percentage }}%"
                             aria-valuenow="{{ item.percentage }}" aria-valuemin="0" aria-valuemax="100">
                        </div>
                    </div>
                    {% if item.games_without_tag > 0 %}
                        <div class="small mt-1">
                            <a href="{{ route('staff.games.list.showList', {'listType': 'no-tag-category', 'param1': item.id}) }}">
                                View {{ item.games_without_tag }} games without this tag category
                            </a>
                        </div>
                    {% endif %}
                </div>
            {% endfor %}

        </div>

    </div>

{% endblock page_inner %}
