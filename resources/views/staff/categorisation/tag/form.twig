{% import 'ui/components/form/submit.twig' as formsubmit %}

{% include 'common/form-errors.twig' %}
<form role="form" method="post" action="{{ formSubmitAction }}">
    {{ csrf_field() }}

    <div class="row mb-3">
        <label for="tag_category_id" class="col-md-2 col-form-label">Category</label>
        <div class="col-sm-4">
            <select id="tag_category_id" class="form-select" name="tag_category_id">
                <option value="">&nbsp;</option>
                {% for item in CategoryList %}
                    <option value="{{ item.id }}">{{ item.name }}</option>
                {% endfor %}
            </select>
        </div>
    </div>

    <div class="row mb-3">
        <label for="tag_name" class="col-sm-2 col-form-label">Tag name</label>
        <div class="col-sm-4">
            <input id="tag_name" name="tag_name" type="text" class="form-control" required>
        </div>
    </div>

    <div class="row mb-3">
        <label for="link_title" class="col-sm-2 col-form-label">Link title</label>
        <div class="col-sm-4">
            <input id="link_title" name="link_title" type="text" class="form-control" required>
            <div class="form-text">Automatically generated from the name. Can be changed if you wish</div>
        </div>
    </div>

    {{ formsubmit.renderB5() }}

</form>
