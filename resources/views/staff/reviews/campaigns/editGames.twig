{% extends 'theme/staff-b5/layout-default.twig' %}

{% block page_inner %}

<div class="alert alert-info">
    Editing campaigns for campaign: {{ CampaignData.name }}
    <br>
    Enter each game ID on a new line.
</div>

{% set formSubmitAction = route('staff.reviews.campaigns.editGames', {'campaignId': CampaignId}) %}
{% include 'ui/components/alerts/form-errors.twig' %}
<form role="form" method="post" action="{{ formSubmitAction }}">
    {{ csrf_field() }}

    <div class="row mb-3">
        <label for="game_ids" class="col-md-4 col-form-label">Game IDs</label>
        <div class="col-md-6">
            <textarea id="game_ids" name="game_ids" rows="20" class="form-control">{{ GameIds }}</textarea>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-8 offset-md-4">
            <button type="submit" class="btn outline btn-primary">
                Submit
            </button>
        </div>
    </div>
</form>

{% endblock page_inner %}
