{% import 'ui/components/rating/badge.twig' as rating %}

{% extends 'theme/staff-b5/layout-default.twig' %}

{% block page_inner %}

{% if ReviewDraftItems.count > 0 %}

<table class="table data-sortable table-sm table-responsive">
    <thead>
        <tr>
            <th class="text-center">Date</th>
            <th class="text-left">Source</th>
            <th class="text-left">Title</th>
            <th class="text-left">Site</th>
            <th class="text-center">Game</th>
            <th class="text-center">Score</th>
            <th class="text-center"></th>
        </tr>
    </thead>
    <tbody>
        {% for item in ReviewDraftItems %}
            <tr>
                <td class="text-center">
                    <small>
                        {{ item.item_date|date('Y-m-d') }}
                    </small>
                </td>
                <td class="text-left">
                    {{ item.source }}
                </td>
                <td class="text-left" style="max-width: 300px;">
                    <a href="{{ item.item_url }}" target="_blank">{{ item.item_title }}</a>
                </td>
                <td class="text-left">
                    <small>
                        {{ item.site.name }}
                    </small>
                </td>
                <td class="text-center">
                    {% if item.game.title is not null %}
                        {% include 'ui/components/icons/icon-check-green.twig' %}
                    {% else %}
                        {% include 'ui/components/icons/icon-cross-red.twig' %}
                    {% endif %}
                </td>
                <td class="text-center">
                    {% set origRating = null %}
                    {% if item.site.id %}
                        {% if item.item_rating is null %}
                            -
                        {% else %}
                            {% if item.site.rating_scale == 5 %}
                                {% set badgeRating = (item.item_rating * 2)|number_format(1) %}
                                {% set origRating = item.item_rating %}
                            {% else %}
                                {% set badgeRating = item.item_rating %}
                            {% endif %}
                            {{ rating.score(badgeRating, 'h5') }}
                        {% endif %}
                    {% endif %}
                </td>
                <td class="text-center">
                    <a href="{{ route('staff.reviews.review-drafts.edit', {'itemId': item.id}) }}">Edit</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% else %}
    <p>No items found!</p>
{% endif %}

{% include 'ui/layouts/assets/table-sorting-b5.twig' %}
<script>
    $(document).ready(function() {
        $('.data-sortable').DataTable({
            "order": [{{ jsInitialSort|raw }}],
            "pageLength": 50,
            "columns": [
                null,
                { "orderable": false },
                { "orderable": false },
                { "orderable": false },
                { "orderable": false },
                { "orderable": false },
                { "orderable": false }
            ]
        });
    });
</script>

{% endblock page_inner %}
