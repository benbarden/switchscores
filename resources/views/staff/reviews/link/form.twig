{% include 'common/form-errors.twig' %}
<form class="form-horizontal" role="form" method="post" action="{{ formSubmitAction }}">
    {{ csrf_field() }}

    {% if FormMode == 'edit' %}
    <div class="form-group">
        <label for="url" class="col-md-4 control-label">Source (Review type)</label>
        <div class="col-md-6">
            <span class="form-control-static">{{ ReviewLinkData.review_type }}</span>
        </div>
    </div>
    {% endif %}

    <div class="form-group">
        <label for="game_id" class="col-md-4 control-label">Game</label>
        <div class="col-md-6">
            <select id="game_id" class="form-control" name="game_id" required autofocus>
                <option value="">&nbsp;</option>
                {% for item in GamesList %}
                    <option value="{{ item.id }}">{{ item.title }}</option>
                {% endfor %}
            </select>
        </div>
    </div>

    <div class="form-group">
        <label for="url" class="col-md-4 control-label">Url (include http://)</label>
        <div class="col-md-6">
            <input id="url" type="text" class="form-control" name="url" required>
        </div>
    </div>

    <div class="form-group">
        <label for="site_id" class="col-md-4 control-label">Site</label>
        <div class="col-md-6">
            <select id="site_id" class="form-control" name="site_id" required>
                <option value="">&nbsp;</option>
                {% for item in ReviewSites %}
                    <option value="{{ item.id }}">{{ item.name }}</option>
                {% endfor %}
            </select>
        </div>
    </div>

    <div class="form-group">
        <label for="review_date" class="col-md-4 control-label">Review date</label>
        <div class="col-md-6">
            <input id="review_date" type="date" class="form-control" name="review_date">
        </div>
    </div>

    <div class="form-group">
        <label for="rating_original" class="col-md-4 control-label">Rating</label>
        <div class="col-md-6">
            <input id="rating_original" type="text" class="form-control" name="rating_original" value="{{ old('rating_original') }}" required>
            <p>
                <small>
                    Enter the actual score here.
                    If the reviewing site has a scale other than 1-10,
                    the score will be converted.
                </small>
            </p>
        </div>
    </div>

    <div class="form-group">
        <label for="description" class="col-md-4 control-label">Description</label>
        <div class="col-md-6">
            <textarea id="description" name="description" class="form-control" rows="10" cols="50"></textarea>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-8 col-md-offset-4">
            <button type="submit" class="btn outline btn-primary">
                Submit
            </button>
        </div>
    </div>
</form>
