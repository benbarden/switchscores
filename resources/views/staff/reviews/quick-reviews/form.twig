{% include 'ui/components/alerts/form-errors.twig' %}
<form role="form" method="post" action="{{ formSubmitAction }}">
    {{ csrf_field() }}

    <div class="row mb-3">
        <label for="game_id" class="col-md-4 col-form-label">User</label>
        <div class="col-md-6">
            {{ ReviewData.user.display_name }}
            <br><small>ID: {{ ReviewData.user.id }} | Email: {{ ReviewData.user.email }}</small>
        </div>
    </div>

    <div class="row mb-3">
        <label for="game_id" class="col-md-4 col-form-label">Game</label>
        <div class="col-md-6">
            {{ ReviewData.game.title }}
        </div>
    </div>

    <div class="row mb-3">
        <label for="game_id" class="col-md-4 col-form-label">Review score</label>
        <div class="col-md-6">
            {{ ReviewData.review_score }}
        </div>
    </div>

    <div class="row mb-3">
        <label for="game_id" class="col-md-4 col-form-label">Review body</label>
        <div class="col-md-6">
            {% if ReviewData.review_body %}
                <p>
                    <small>
                        {{ ReviewData.review_body|raw }}
                    </small>
                </p>
            {% else %}
                <p>
                    <em>Review does not contain a body.</em>
                </p>
            {% endif %}
        </div>
    </div>

    <div class="row mb-3">
        <label for="item_status" class="col-md-4 col-form-label">Status</label>
        <div class="col-md-6">
            <select id="item_status" name="item_status" class="form-select">
                {% for item in StatusList %}
                    <option value="{{ item.id }}">{{ item.title }}</option>
                {% endfor %}
            </select>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-8 offset-md-4">
            <button type="submit" class="btn outline btn-primary">
                Submit
            </button>
        </div>
    </div>
</form>
