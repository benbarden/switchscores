{% extends 'theme/wos/staff/clean-wide.twig' %}

{% set crumbNav = [{'url': route('staff.eshop.dashboard'), 'text': 'eShop'}, {'text': PageTitle}] %}

{% block page_inner %}

{% if ItemList.count > 0 %}
    <table class="table data-sortable">
        <thead>
            <tr>
                <th class="text-right">#</th>
                <th class="text-left">Game</th>
                <th class="text-left">Message</th>
                <th class="text-left">On-site data</th>
                <th class="text-left">eShop data</th>
                <th class="text-center" style="min-width: 100px;">Date</th>
            </tr>
        </thead>
        <tbody>
            {% for item in ItemList %}
                <tr>
                    <td class="text-right">
                        {{ item.id }}
                    </td>
                    <td class="text-left">
                        <a href="{{ route('staff.games.detail', {'gameId': item.game.id}) }}">{{ item.game.title }}</a>
                        <a href="{{ LinkHelper.gameShow(item.game) }}" target="_blank" title="Open game page in a new tab">
                            <span class="glyphicon glyphicon-share" aria-hidden="true"></span>
                        </a>
                    </td>
                    <td class="text-left">
                        {{ item.error_message }}
                    </td>
                    <td class="text-left">
                        {{ item.current_data }}
                    </td>
                    <td class="text-left">
                        {{ item.new_data }}
                    </td>
                    <td class="text-center">
                        {{ item.created_at|date('Y-m-d') }}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% else %}
    <p>No records found!</p>
{% endif %}

{% include 'common/table-sorting.twig' %}
<script>
    $(document).ready(function() {
        $('.data-sortable').DataTable({
            "order": [{{ jsInitialSort|raw }}],
            "pageLength": 25,
            "columns": [
                null,
                null,
                null,
                { "orderable": false },
                { "orderable": false },
                null
            ]
        });
    });
</script>

{% endblock page_inner %}
