{% extends 'theme/wos/staff/clean-wide.twig' %}

{% set crumbNav = [{'url': route('staff.eshop.dashboard'), 'text': 'eShop'}, {'text': PageTitle}] %}

{% block page_inner %}

<div class="row">
    <div class="col-xs-12 col-sm-12">
        <div class="pull-right">
            <label for="admin-nav-filter">Filters:</label>
            <select id="admin-nav-filter" name="admin-nav-filter" class="form-control">
                <option value="">All games</option>
                <option value="with-link">Items linked to a game on Switch Scores</option>
                <option value="no-link">Items not linked to a game on Switch Scores</option>
                <option value="ignored">Ignored items</option>
            </select>
        </div>
    </div>
</div>

<hr>

<div id="js-admin-notify" class="alert alert-success" role="alert" style="display: none;"></div>

{% if FeedItems.count > 0 %}
    <table class="table data-sortable">
        <thead>
            <tr>
                <th class="text-right">fs_id</th>
                <th class="text-left">Title</th>
                <th class="text-left">Link</th>
                <th class="text-center">Change date</th>
                <th class="text-center">Nintendo Url</th>
                <th class="text-center">Options</th>
            </tr>
        </thead>
        <tbody>
            {% for item in FeedItems %}
                <tr>
                    <td class="text-right">
                        <small>{{ item.fs_id }}</small>
                    </td>
                    <td class="text-left">
                        {{ item.title }}
                    </td>
                    <td class="text-center">
                        {% if item.game %}
                            <small>{{ item.game.id }}</small>
                        {% elseif item.game_id %}
                            <small>{{ item.game_id }}</small>
                        {% else %}
                            <small>-</small>
                        {% endif %}
                    </td>
                    <td class="text-center">
                        <small>{{ item.change_date }}</small>
                    </td>
                    <td class="text-center">
                        {% if item.url %}
                            <a href="{{ LinkHelper.eshopUrl('eu', item.url) }}" target="_blank">View</a>
                        {% else %}
                            -
                        {% endif %}
                    </td>
                    <td class="text-center">
                        <a href="{{ route('staff.eshop.feed-items-europe.view', {'itemId': item.fs_id}) }}">View</a>
                        {% if item.game.id is null or item.game.id == '0' %}
                            : <a href="{{ route('staff.eshop.feed-items-europe.add-game', {'itemId': item.fs_id}) }}">Add game</a>
                        {% endif %}
                        :
                        {% if ActiveNav == 'ignored' %}
                            <a href="javascript:void(0);" id="lnk-remove-ignore-{{ item.fs_id }}" class="lnk-remove-ignore">Un-ignore</a>
                        {% else %}
                            <a href="javascript:void(0);" id="lnk-add-ignore-{{ item.fs_id }}" class="lnk-add-ignore">Ignore</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% else %}
    <p>No items found!</p>
{% endif %}

{% include 'common/table-sorting.twig' %}
<script>
    $('#admin-nav-filter').on('change', function() {
        selectedFilter = $(this).val();
        top.location.href = '{{ route('staff.eshop.feed-items-europe.list')}}' + '/' + selectedFilter;
    });
    $(document).ready(function() {
        var activeNav = '{{ ActiveNav }}';
        $('#admin-nav-filter').val(activeNav);
        $('.data-sortable').DataTable({
            "order": [{{ jsInitialSort|raw }}],
            "pageLength": 50,
            "columns": [
                null,
                null,
                null,
                { "orderable": false },
                { "orderable": false },
                { "orderable": false }
            ]
        });
    });

    $('.lnk-add-ignore').on('click', function() {

        $('#js-admin-notify').hide();

        elemId = $(this).attr('id');
        fsId = elemId.replace('lnk-add-ignore-', '');

        if (fsId == '') {
            $('#js-admin-notify').text('Missing fsId');
            $('#js-admin-notify').show();
            return false;
        }

        if (!window.confirm('Add to ignore list?')) {
            return false;
        }

        $.ajaxSetup({
            headers: {
                'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')
            }
        });

        $.getJSON('{{ route('staff.eshop.europe.addToIgnoreList') }}', {'fsId': fsId}, function(data) {
            $('#lnk-add-ignore-' + fsId).parent().html('<em>Ignored</em>');
        })
        .fail(function(data) {
            $('#js-admin-notify').text('An error occurred: ' + data.responseJSON.error);
            $('#js-admin-notify').show();
        });
    });

    $('.lnk-remove-ignore').on('click', function() {

        $('#js-admin-notify').hide();

        elemId = $(this).attr('id');
        fsId = elemId.replace('lnk-remove-ignore-', '');

        if (fsId == '') {
            $('#js-admin-notify').text('Missing fsId');
            $('#js-admin-notify').show();
            return false;
        }

        if (!window.confirm('Remove from ignore list?')) {
            return false;
        }

        $.ajaxSetup({
            headers: {
                'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')
            }
        });

        $.getJSON('{{ route('staff.eshop.europe.removeFromIgnoreList') }}', {'fsId': fsId}, function(data) {
            $('#lnk-remove-ignore-' + fsId).parent().html('<em>Un-ignored</em>');
        })
        .fail(function(data) {
            $('#js-admin-notify').text('An error occurred: ' + data.responseJSON.error);
            $('#js-admin-notify').show();
        });
    });
</script>

{% endblock page_inner %}
