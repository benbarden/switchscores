{% extends 'theme/wos/staff/clean-wide.twig' %}

{% set crumbNav = [
    {'url': route('staff.partners.dashboard'), 'text': 'Partners'},
    {'text': PageTitle}
] %}

{% block page_inner %}

{% if ItemList %}

    <table class="table data-sortable">
        <thead>
        <tr>
            <th class="text-center">#</th>
            <th class="text-left">Title</th>
            <th class="text-left">Developer</th>
            <th class="text-left">N.co.uk</th>
            <th class="text-left">Wikipedia</th>
            <th class="text-center">Options</th>
        </tr>
        </thead>
        <tbody>
        {% for item in ItemList %}
            <tr>
                <td class="text-center">
                    {{ item.id }}
                </td>
                <td class="text-left">
                    {{ item.title }}
                </td>
                <td class="text-left">
                    {{ item.developer }}
                </td>
                <td class="text-left">
                    {{ item.nintendo_co_uk_developers }}
                </td>
                <td class="text-left">
                    {{ item.wikipedia_developers }}
                </td>
                <td class="text-center">
                    <a href="{{ route('staff.games.edit', {'gameId': item.id}) }}">Edit game</a> :
                    <a href="{{ route('admin.game.partner.list', {'gameId': item.id}) }}">Partners</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endif %}

{% include 'common/table-sorting.twig' %}
<script>
    $(document).ready(function() {
        $('.data-sortable').DataTable({
            "order": [ {{ jsInitialSort|raw}} ],
            "pageLength": 25,
            "columns": [
                null,
                null,
                null,
                null,
                null,
                { "orderable": false }
            ]
        });
    });
</script>

{% endblock page_inner %}
