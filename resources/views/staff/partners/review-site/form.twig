{% include 'common/form-errors.twig' %}
<form class="form-horizontal" role="form" method="post" action="{{ formSubmitAction }}">
    {{ csrf_field() }}

    {% if FormMode != 'add' %}
        <div class="form-group">
            <label for="status" class="col-md-4 control-label">Status</label>
            <div class="col-md-6">
                <select id="status" class="form-control" name="status">
                    <option value="">&nbsp;</option>
                    {% for item in StatusList %}
                        <option value="{{ item.id }}">{{ item.title }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
    {% endif %}
    <div class="form-group">
        <label for="name" class="col-md-4 control-label">Name</label>
        <div class="col-md-6">
            <input id="name" type="text" class="form-control" name="name" maxlength="50" required autofocus>
        </div>
    </div>
    <div class="form-group">
        <label for="link_title" class="col-md-4 control-label">Link title</label>
        <div class="col-md-6">
            <input id="link_title" type="text" class="form-control" name="link_title" maxlength="100" required>
        </div>
    </div>
    <div class="form-group">
        <label for="website_url" class="col-md-4 control-label">Site URL (include http://)</label>
        <div class="col-md-6">
            <input id="website_url" type="text" class="form-control" name="website_url" required>
        </div>
    </div>
    <div class="form-group">
        <label for="twitter_id" class="col-md-4 control-label">
            Twitter ID
            <br><small>https://twitter.com/</small>
        </label>
        <div class="col-md-6">
            <input id="twitter_id" type="text" class="form-control" name="twitter_id" maxlength="20">
            <small>Don't include full URL - just the username</small>
        </div>
    </div>
    <div class="form-group">
        <label for="contact_name" class="col-md-4 control-label">
            Contact name
        </label>
        <div class="col-md-6">
            <input id="contact_name" type="text" class="form-control" name="contact_name" maxlength="100">
        </div>
    </div>
    <div class="form-group">
        <label for="contact_email" class="col-md-4 control-label">
            Contact email
        </label>
        <div class="col-md-6">
            <input id="contact_email" type="text" class="form-control" name="contact_email">
        </div>
    </div>
    <div class="form-group">
        <label for="contact_form_link" class="col-md-4 control-label">
            Contact form link
        </label>
        <div class="col-md-6">
            <input id="contact_form_link" type="text" class="form-control" name="contact_form_link">
        </div>
    </div>
    <div class="form-group">
        <label for="review_code_regions" class="col-md-4 control-label">
            Review code regions
        </label>
        <div class="col-md-6">
            <input id="review_code_regions" type="text" class="form-control" name="review_code_regions">
        </div>
    </div>
    <div class="form-group">
        <label for="rating_scale" class="col-md-4 control-label">Rating scale</label>
        <div class="col-md-6">
            <input id="rating_scale" type="text" class="form-control" name="rating_scale" size="5" maxlength="2" required>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-8 col-md-offset-4">
            <button type="submit" class="btn outline btn-primary">
                Submit
            </button>
        </div>
    </div>
</form>
