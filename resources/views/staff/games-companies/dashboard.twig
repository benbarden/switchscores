{% extends 'theme/staff-b5/layout-default.twig' %}
{% import "ui/components/headings/heading.twig" as heading %}
{% import 'ui/components/table/row-link-stat.twig' as rowstat %}

{% block page_inner %}

<div class="row">

    <div class="col-md-4">

        {{ heading.renderSlick('Action lists') }}

        <table class="table">
            <tbody>
            <tr>
                <td>
                    <a href="{{ route('staff.partners.data-cleanup.games-with-missing-developer') }}">Games with missing developer</a>
                </td>
                <td class="text-end">
                    <a href="{{ route('staff.partners.data-cleanup.games-with-missing-developer') }}" class="h4">{{ DeveloperMissingCount }}</a>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="{{ route('staff.partners.data-cleanup.games-with-missing-publisher') }}">Games with missing publisher</a>
                </td>
                <td class="text-end">
                    <a href="{{ route('staff.partners.data-cleanup.games-with-missing-publisher') }}" class="h4">{{ PublisherMissingCount }}</a>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="{{ route('staff.games-companies.without-emails') }}">
                        Games companies without emails
                    </a>
                </td>
                <td class="text-end">
                    <a href="{{ route('staff.games-companies.without-emails') }}" class="h4">{{ GamesCompaniesWithoutEmailsCount }}</a>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="{{ route('staff.games-companies.without-twitter-ids') }}">
                        Games companies without Twitter IDs
                    </a>
                </td>
                <td class="text-end">
                    <a href="{{ route('staff.games-companies.without-twitter-ids') }}" class="h4">{{ GamesCompaniesWithoutTwitterIdsCount }}</a>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="{{ route('staff.games-companies.without-website-urls') }}">
                        Games companies without URLs
                    </a>
                </td>
                <td class="text-end">
                    <a href="{{ route('staff.games-companies.without-website-urls') }}" class="h4">{{ GamesCompaniesWithoutWebsiteUrlsCount }}</a>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="{{ route('staff.games-companies.duplicate-twitter-ids') }}">
                        Twitter IDs on multiple games companies
                    </a>
                </td>
                <td class="text-end">
                    <a href="{{ route('staff.games-companies.duplicate-twitter-ids') }}" class="h4">{{ GamesCompanyDuplicateTwitterIdsCount }}</a>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="{{ route('staff.games-companies.duplicate-website-urls') }}">
                        Website URLs on multiple games companies
                    </a>
                </td>
                <td class="text-end">
                    <a href="{{ route('staff.games-companies.duplicate-website-urls') }}" class="h4">{{ GamesCompanyDuplicateWebsiteUrlsCount }}</a>
                </td>
            </tr>
            </tbody>
        </table>

    </div>

    <div class="col-md-4">

        {{ heading.renderSlick('Navigation') }}

        <table class="table">
            <tbody>
            <tr>
                <td>
                    <a href="{{ route('staff.games-companies.add') }}">+ Add games company</a>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="{{ route('staff.games-companies.search') }}">Games companies - search</a>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="{{ route('staff.partners.outreach.list') }}">Partner outreach - view all</a>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="{{ route('staff.partners.outreach.add') }}">+ Add outreach</a>
                </td>
            </tr>
            </tbody>
        </table>

        {{ heading.renderSlick('Outreach targets') }}

        <table class="table">
            <tbody>
            <tr>
                <td>
                    Low quality games are not included.
                </td>
                <td class="text-end">
                </td>
            </tr>
            {% for whichYear in AllowedYears %}
                {{ tableRowStat.rowStat(
                    route('staff.games-companies.pubs-with-unranked-games', {'releaseYear': whichYear}),
                    'Publishers with unranked games ('~whichYear~')',
                    _context['PubsWithUnrankedGamesCount'~whichYear]
                ) }}
            {% endfor %}
            <tr>
                <td>
                    <a href="{{ route('staff.games-companies.pubs-with-unranked-games') }}">Publishers with unranked games - all</a>
                </td>
                <td class="text-end">
                    <a href="{{ route('staff.games-companies.pubs-with-unranked-games') }}" class="h4">{{ PubsWithUnrankedGamesCount }}</a>
                </td>
            </tr>
            </tbody>
        </table>

    </div>

    <div class="col-md-4">

        {{ heading.renderSlick('Low quality filter') }}

        <table class="table">
            <tbody>
            <tr>
                <td>
                    <a href="{{ route('staff.games-companies.normal-quality') }}">Games companies - normal quality</a>
                </td>
                <td class="text-end">
                    <a href="{{ route('staff.games-companies.normal-quality') }}" class="h4">{{ GamesCompaniesNormalQualityCount }}</a>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="{{ route('staff.games-companies.low-quality') }}">Games companies - low quality</a>
                </td>
                <td class="text-end">
                    <a href="{{ route('staff.games-companies.low-quality') }}" class="h4">{{ GamesCompaniesLowQualityCount }}</a>
                </td>
            </tr>
            </tbody>
        </table>

    </div>

</div>

{% endblock page_inner %}
