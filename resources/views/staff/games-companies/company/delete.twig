{% extends 'theme/staff-b5/layout-default.twig' %}

{% block page_inner %}

{% if ErrorsCustom %}
    {% include 'ui/components/alerts/form-errors.twig' %}
    <div class="alert alert-warning" role="alert">
        Cannot delete the games company: <strong>{{ PartnerData.name }}</strong> (id: {{ PartnerId }}) due to the above errors.
    </div>
{% else %}
    <div class="alert alert-warning" role="alert">
        <strong>Warning!</strong> You are about to delete the games company: <strong>{{ PartnerData.name }}</strong> (id: {{ PartnerId }})
        <br>Please ensure this is what you want to do before proceeding. There is no option to undo the deletion if you proceed!
    </div>

    <form role="form" method="post" action="{{ route('staff.games-companies.delete', {'gamesCompanyId': PartnerId}) }}">
        {{ csrf_field() }}

        <div class="row mb-3">
            <div class="col-md-8 offset-md-4">
                <button type="submit" class="btn outline btn-danger">
                    Confirm deletion
                </button>
            </div>
        </div>
    </form>
{% endif %}

{% endblock page_inner %}
