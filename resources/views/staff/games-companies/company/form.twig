{% include 'ui/components/alerts/form-errors.twig' %}
<form role="form" method="post" action="{{ formSubmitAction }}">
    {{ csrf_field() }}

    <div class="row">

        <div class="col-md-12">

            <div class="row mb-3">
                <label for="name" class="col-md-4 col-form-label">Name</label>
                <div class="col-md-6">
                    <input id="name" type="text" class="form-control" name="name" maxlength="100" required autofocus>
                </div>
            </div>
            <div class="row mb-3">
                <label for="link_title" class="col-md-4 col-form-label">Link title</label>
                <div class="col-md-6">
                    <input id="link_title" type="text" class="form-control" name="link_title" maxlength="100" required>
                </div>
            </div>
            <div class="row mb-3">
                <label for="website_url" class="col-md-4 col-form-label">Website URL</label>
                <div class="col-md-6">
                    <input id="website_url" type="text" class="form-control" name="website_url">
                </div>
            </div>
            <div class="row mb-3">
                <label for="email" class="col-md-4 col-form-label">Email</label>
                <div class="col-md-6">
                    <input id="email" type="text" class="form-control" name="email">
                </div>
            </div>
            <div class="row mb-3">
                <label for="twitter_id" class="col-md-4 col-form-label">
                    Twitter ID
                    <br><small>https://twitter.com/</small>
                </label>
                <div class="col-md-6">
                    <input id="twitter_id" type="text" class="form-control" name="twitter_id" maxlength="20">
                    <small>Don't include full URL - just the username</small>
                </div>
            </div>
            <div class="row mb-3">
                <label for="threads_id" class="col-md-4 col-form-label">
                    Threads ID
                    <br><small>https://www.threads.net/@</small>
                </label>
                <div class="col-md-6">
                    <input id="threads_id" type="text" class="form-control" name="threads_id" maxlength="50">
                    <small>Don't include full URL - just the username</small>
                </div>
            </div>
            <div class="row mb-3">
                <label for="bluesky_id" class="col-md-4 col-form-label">
                    Bluesky ID
                    <br><small>https://bsky.app/profile/</small>
                </label>
                <div class="col-md-6">
                    <input id="bluesky_id" type="text" class="form-control" name="bluesky_id" maxlength="255">
                    <small>Don't include full URL - just the part after /profile/</small>
                </div>
            </div>
            <div class="row mb-3">
                <label for="is_low_quality" class="col-md-4 col-form-label">Is low quality?</label>
                <div class="col-md-6">
                    <input id="is_low_quality" type="checkbox" name="is_low_quality">
                    <br>
                    <small>
                        When this box is ticked, any future games linked to this games company will be flagged
                        in our low quality filter. They may be hidden from certain pages on the site, and
                        signposted as low quality in some places.
                        <br>Only use this for companies that consistently
                        publish shovelware, asset flips, or other very low quality games - not simply games that
                        didn't review well.
                    </small>
                </div>
            </div>
            <div class="row mb-3">
                <label for="update_existing_games" class="col-md-4 col-form-label">Update existing games?</label>
                <div class="col-md-6">
                    <input id="update_existing_games" type="checkbox" name="update_existing_games">
                    <br>
                    <small>
                        When changing the "Is low quality?" flag above, tick this box to also update all
                        games linked to this company.
                        <br>If you are only editing the details of the games company, this box should
                        normally be left unticked.
                        <br>However, if you are changing the "Is low quality?" flag, tick this box and
                        the games will be updated too, to either low quality or standard quality, to match
                        the publisher setting.
                    </small>
                </div>
            </div>

        </div>

    </div>

    <hr>

    <div class="row mb-3">
        <div class="col-md-8 offset-md-4">
            <button type="submit" class="btn outline btn-primary">
                Submit
            </button>
        </div>
    </div>

</form>
