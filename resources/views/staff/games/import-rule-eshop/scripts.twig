<script>

    var formMode = '{{ FormMode }}';
    var formVals = [];

    if (formMode == 'edit') {

        // This is used when editing existing items.
        formVals['ignore_publishers'] = "{{ GameImportRuleEshop.ignore_publishers }}";
        formVals['ignore_europe_dates'] = "{{ GameImportRuleEshop.ignore_europe_dates }}";
        formVals['ignore_price'] = "{{ GameImportRuleEshop.ignore_price }}";
        formVals['ignore_players'] = "{{ GameImportRuleEshop.ignore_players }}";
        formVals['ignore_genres'] = "{{ GameImportRuleEshop.ignore_genres }}";

    } else {

        // This is used for new items.
        // It's also used when submitting the edit version, to avoid the DB data overwriting the form.
        formVals['ignore_publishers'] = "{{ old('ignore_publishers') }}";
        formVals['ignore_europe_dates'] = "{{ old('ignore_europe_dates') }}";
        formVals['ignore_price'] = "{{ old('ignore_price') }}";
        formVals['ignore_players'] = "{{ old('ignore_players') }}";
        formVals['ignore_genres'] = "{{ old('ignore_genres') }}";

    }

    if (formVals['ignore_publishers'] == '1') {
        $('#ignore_publishers').attr('checked', true);
    } else {
        $('#ignore_publishers').attr('checked', false);
    }
    if (formVals['ignore_europe_dates'] == '1') {
        $('#ignore_europe_dates').attr('checked', true);
    } else {
        $('#ignore_europe_dates').attr('checked', false);
    }
    if (formVals['ignore_price'] == '1') {
        $('#ignore_price').attr('checked', true);
    } else {
        $('#ignore_price').attr('checked', false);
    }
    if (formVals['ignore_players'] == '1') {
        $('#ignore_players').attr('checked', true);
    } else {
        $('#ignore_players').attr('checked', false);
    }
    if (formVals['ignore_genres'] == '1') {
        $('#ignore_genres').attr('checked', true);
    } else {
        $('#ignore_genres').attr('checked', false);
    }

</script>
