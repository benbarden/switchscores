<script>

    var formMode = '{{ FormMode }}';
    var formVals = [];

    if (formMode == 'edit') {

        // This is used when editing existing items.
        formVals['ignore_developers'] = "{{ GameImportRuleWikipedia.ignore_developers }}";
        formVals['ignore_publishers'] = "{{ GameImportRuleWikipedia.ignore_publishers }}";
        formVals['ignore_europe_dates'] = "{{ GameImportRuleWikipedia.ignore_europe_dates }}";
        formVals['ignore_us_dates'] = "{{ GameImportRuleWikipedia.ignore_us_dates }}";
        formVals['ignore_jp_dates'] = "{{ GameImportRuleWikipedia.ignore_jp_dates }}";
        formVals['ignore_genres'] = "{{ GameImportRuleWikipedia.ignore_genres }}";

    } else {

        // This is used for new items.
        // It's also used when submitting the edit version, to avoid the DB data overwriting the form.
        formVals['ignore_developers'] = "{{ old('ignore_developers') }}";
        formVals['ignore_publishers'] = "{{ old('ignore_publishers') }}";
        formVals['ignore_europe_dates'] = "{{ old('ignore_europe_dates') }}";
        formVals['ignore_us_dates'] = "{{ old('ignore_us_dates') }}";
        formVals['ignore_jp_dates'] = "{{ old('ignore_jp_dates') }}";
        formVals['ignore_genres'] = "{{ old('ignore_genres') }}";

    }

    if (formVals['ignore_developers'] == '1') {
        $('#ignore_developers').attr('checked', true);
    } else {
        $('#ignore_developers').attr('checked', false);
    }
    if (formVals['ignore_publishers'] == '1') {
        $('#ignore_publishers').attr('checked', true);
    } else {
        $('#ignore_publishers').attr('checked', false);
    }
    if (formVals['ignore_europe_dates'] == '1') {
        $('#ignore_europe_dates').attr('checked', true);
    } else {
        $('#ignore_europe_dates').attr('checked', false);
    }
    if (formVals['ignore_us_dates'] == '1') {
        $('#ignore_us_dates').attr('checked', true);
    } else {
        $('#ignore_us_dates').attr('checked', false);
    }
    if (formVals['ignore_jp_dates'] == '1') {
        $('#ignore_jp_dates').attr('checked', true);
    } else {
        $('#ignore_jp_dates').attr('checked', false);
    }
    if (formVals['ignore_genres'] == '1') {
        $('#ignore_genres').attr('checked', true);
    } else {
        $('#ignore_genres').attr('checked', false);
    }

</script>
