{% extends 'theme/wos/staff/clean-wide.twig' %}

{% set crumbNav = [{'text': PageTitle}] %}

{% block page_inner %}

<div class="row">

    <div class="col-md-4">

        <h2>Action lists</h2>
        <h3>Games to release</h3>

        <table class="table">
            <tbody>
            <tr>
                <td>
                    <a href="{{ route('admin.games.list')}}/action-list-games-for-release">Games to release</a>
                </td>
                <td class="text-right">
                    <a href="{{ route('admin.games.list')}}/action-list-games-for-release" class="h4">{{ GamesForReleaseCount }}</a>
                </td>
            </tr>
            </tbody>
        </table>

        <h3>Missing data</h3>

        <table class="table">
            <tbody>
            <tr>
                <td>
                    <a href="{{ route('admin.games.list') }}/no-video-url">No video URL</a>
                </td>
                <td class="text-right">
                    <a href="{{ route('admin.games.list') }}/no-video-url" class="h4">{{ MissingVideoUrlCount }}</a>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="{{ route('admin.games.list') }}/no-amazon-uk-link">No Amazon UK link</a>
                </td>
                <td class="text-right">
                    <a href="{{ route('admin.games.list') }}/no-amazon-uk-link" class="h4">{{ MissingAmazonUkLink }}</a>
                </td>
            </tr>
            </tbody>
        </table>

    </div>

    <div class="col-md-4">

        <h2>Game lists</h2>
        <table class="table">
            <tbody>
            <tr>
                <td>
                    <a href="{{ route('staff.games.list.recently-added') }}">Recently added</a>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="{{ route('staff.games.list.upcoming-games') }}">Upcoming games</a>
                </td>
            </tr>
            </tbody>
        </table>

        <h2>Archive</h2>
        <table class="table">
            <tbody>
            <tr>
                <td>
                    <a href="{{ route('admin.games.list') }}">All games</a>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="{{ route('admin.games-title-hash.list') }}">All title hashes</a>
                </td>
            </tr>
            </tbody>
        </table>

        <h2>Tools</h2>
        <table class="table">
            <tbody>
            <tr>
                <td>
                    <a href="{{ route('admin.tools.toolLandingModular', {'commandName': 'UpdateGameCalendarStats'}) }}">UpdateGameCalendarStats</a>
                    <br>
                    <small>Updates the released game stats on the Release Calendar page</small>
                </td>
            </tr>
            </tbody>
        </table>
    </div>

    <div class="col-md-4">

        <h2>Release date stats</h2>

        <table class="table">
            <tbody>
            <tr>
                <td>
                    <a href="{{ route('admin.games.list') }}">Total games (All regions)</a>
                </td>
                <td class="text-right">
                    <a href="{{ route('admin.games.list') }}" class="h4">{{ TotalGameCount }}</a>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="{{ route('admin.games.list') }}/released">Released games</a>
                </td>
                <td class="text-right">
                    <a href="{{ route('admin.games.list') }}/released" class="h4">{{ ReleasedGameCount }}</a>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="{{ route('staff.games.list.upcoming-games') }}">Upcoming games</a>
                </td>
                <td class="text-right">
                    <a href="{{ route('staff.games.list.upcoming-games') }}" class="h4">{{ UpcomingGameCount }}</a>
                </td>
            </tr>
            </tbody>
        </table>

        <h2>eShop</h2>

        <table class="table">
            <tbody>
            <tr>
                <td>
                    <a href="{{ route('admin.games-filter.games-no-eshop-europe-link') }}">Games with no eShop Europe link</a>
                </td>
                <td class="text-right">
                    <a href="{{ route('admin.games-filter.games-no-eshop-europe-link') }}" class="h4">{{ NoEshopEuropeLinkCount }}</a>
                </td>
            </tr>
            </tbody>
        </table>

    </div>

</div>

{% endblock page_inner %}
