{% include 'ui/components/alerts/form-errors.twig' %}
<form role="form" method="post" action="{{ formSubmitAction }}">
    {{ csrf_field() }}

    <div class="row">

        <div class="col-md-10">

            {% for item in TagCategoryList %}

                <fieldset>
                    <legend>{{ item.name }}</legend>
                    {% if item.tags %}
                        <div class="row mb-3">
                            {% for categoryItem in item.tags %}
                                <div class="col-md-3 mb-2">
                                    <input id="tag_item_{{ categoryItem.id }}" name="tag_item[]" value="{{ categoryItem.id }}" type="checkbox">
                                    <label for="tag_item_{{ categoryItem.id }}">{{ categoryItem.tag_name }}</label>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </fieldset>

            {% endfor %}

        </div>

        <div class="col-md-2">

        </div>

    </div>

    <hr>

    <div class="row mb-3">
        <div class="col-md-8">
            <button id="btn-submit" class="btn outline btn-primary float-end">
                Save changes
            </button>
        </div>
    </div>
</form>
