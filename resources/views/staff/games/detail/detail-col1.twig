{% import "ui/components/headings/heading.twig" as heading %}

{{ heading.renderSlick('General info') }}

<table class="table table-sm table-responsive">

    <tr>
        <td>
            <span style="font-weight: bold;">Console</span>
        </td>
        <td>
            {% if GameData.console_id %}
                {{ GameData.console.name }}
            {% else %}
                -
            {% endif %}
        </td>
    </tr>
    <tr>
        <td>
            <span style="font-weight: bold;">Europe release</span>
        </td>
        <td>
            {% if GameData.eu_release_date %}
                {{ GameData.eu_release_date|date('jS M Y') }}
            {% else %}
                -
            {% endif %}
        </td>
    </tr>
    {% if GameData.us_release_date %}
        <tr>
            <td>
                <span style="font-weight: bold;">US release</span>
            </td>
            <td>
                {{ GameData.us_release_date|date('jS M Y') }}
            </td>
        </tr>
    {% endif %}
    {% if GameData.jp_release_date %}
        <tr>
            <td>
                <span style="font-weight: bold;">Japan release</span>
            </td>
            <td>
                {{ GameData.jp_release_date|date('jS M Y') }}
            </td>
        </tr>
    {% endif %}
    <tr>
        <td>
            <span style="font-weight: bold;">Released (in EU)?</span>
        </td>
        <td>
            {% if GameData.eu_is_released == 1 %}
                Yes
            {% else %}
                No
            {% endif %}
        </td>
    </tr>
    <tr>
        <td>
            <strong>Video URL</strong>
        </td>
        <td class="text-left">
            {% if GameData.video_url != '' %}
                <em>OK</em>
            {% else %}
                <em>None set.</em>
            {% endif %}
        </td>
    </tr>
    <tr>
        <td>
            <strong>One to watch</strong>
        </td>
        <td class="text-left">
            {% if GameData.one_to_watch == 1 %}
                Yes
            {% else %}
                -
            {% endif %}
        </td>
    </tr>
    <tr>
        <td>
            <strong>Game description</strong>
        </td>
        <td class="text-left">
            {% if GameData.game_description != '' %}
                <em>Included</em>
            {% else %}
                <em>None set.</em>
            {% endif %}
        </td>
    </tr>
    <tr>
        <td>
            <span style="font-weight: bold;">Quality filter</span>
        </td>
        <td>
            {% if GameData.is_low_quality == 1 %}
                <span class="badge bg-danger">Low quality</span>
            {% else %}
                -
            {% endif %}
        </td>
    </tr>

    {% if GameData.amazon_uk_link %}
        <tr>
            <td>
                <span style="font-weight: bold;">Buy link</span>
            </td>
            <td>
                <a href="{{ GameData.amazon_uk_link }}" target="_blank">Amazon UK</a>
            </td>
        </tr>
    {% endif %}
    {% if GameData.amazon_us_link %}
        <tr>
            <td>
                <span style="font-weight: bold;">Buy link</span>
            </td>
            <td>
                <a href="{{ GameData.amazon_us_link }}" target="_blank">Amazon US</a>
            </td>
        </tr>
    {% endif %}
    <tr>
        <td>
            <span style="font-weight: bold;">Added batch date</span>
        </td>
        <td>
            {{ GameData.added_batch_date }}
        </td>
    </tr>

</table>

{{ heading.renderSlick('Games companies') }}

<table class="table table-sm table-responsive">

    <tr>
        <td>
            {% if mode == 'reviewers' %}
                <strong>Publishers</strong>
            {% else %}
                <a href="{{ route('staff.games.partner.list', {'gameId': GameId}) }}"><strong>Publishers</strong></a>
            {% endif %}
        </td>
        <td>
            {% if GamePublishers|length > 0 %}
                {% for item in GamePublishers %}
                    <a href="{{ route('staff.games-companies.show', {'gamesCompany': item.publisher}) }}">
                        {{ item.publisher.name }}
                    </a>
                    <br>
                {% endfor %}
            {% else %}
                {{ GameData.publisher }}
            {% endif %}
        </td>
    </tr>

    <tr>
        <td>
            {% if mode == 'reviewers' %}
                <strong>Developers</strong>
            {% else %}
                <a href="{{ route('staff.games.partner.list', {'gameId': GameId}) }}"><strong>Developers</strong></a>
            {% endif %}
        </td>
        <td>
            {% if GameDevelopers|length > 0 %}
                {% for item in GameDevelopers %}
                    <a href="{{ route('staff.games-companies.show', {'gamesCompany': item.developer}) }}">
                        {{ item.developer.name }}
                    </a>
                    <br>
                {% endfor %}
            {% else %}
                {{ GameData.developer }}
            {% endif %}
        </td>
    </tr>

</table>
