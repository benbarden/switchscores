{% import 'ui/components/form/submit.twig' as formsubmit %}

{% extends 'theme/member-b5/layout-default.twig' %}

{% block page_inner %}

{% set formSubmitAction = route('games-companies.profile.edit') %}
{% include 'ui/components/alerts/form-errors.twig' %}
<form class="form-horizontal" role="form" method="post" action="{{ formSubmitAction }}">
    {{ csrf_field() }}

    <div class="row mb-3">
        <label for="name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-4">
            {{ GamesCompany.name }}
            <div class="form-text">Please get in touch if you need to change this.</div>
        </div>
    </div>

    <div class="row mb-3">
        <label for="email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-4">
            <input id="email" type="text" class="form-control" name="email">
        </div>
    </div>
    <div class="row mb-3">
        <label for="website_url" class="col-sm-2 col-form-label">Website URL</label>
        <div class="col-sm-4">
            <input id="website_url" type="text" class="form-control" name="website_url">
        </div>
    </div>
    <div class="row mb-3">
        <label for="twitter_id" class="col-sm-2 col-form-label">
            Twitter ID
            <br><small>https://twitter.com/</small>
        </label>
        <div class="col-sm-4">
            <input id="twitter_id" type="text" class="form-control" name="twitter_id" maxlength="20">
            <div class="form-text">Don't include full URL - just the username</div>
        </div>
    </div>
    <div class="row mb-3">
        <label for="threads_id" class="col-sm-2 col-form-label">
            Threads ID
            <br><small>https://www.threads.net/@</small>
        </label>
        <div class="col-sm-4">
            <input id="threads_id" type="text" class="form-control" name="threads_id" maxlength="50">
            <div class="form-text">Don't include full URL - just the username</div>
        </div>
    </div>
    <div class="row mb-3">
        <label for="bluesky_id" class="col-sm-2 col-form-label">
            Bluesky ID
            <br><small>https://bsky.app/profile/</small>
        </label>
        <div class="col-sm-4">
            <input id="bluesky_id" type="text" class="form-control" name="bluesky_id" maxlength="255">
            <div class="form-text">Don't include full URL - just the username</div>
        </div>
    </div>

    {{ formsubmit.renderB5() }}

</form>

{% include 'games-companies/profile/scripts.twig' %}

{% endblock page_inner %}
