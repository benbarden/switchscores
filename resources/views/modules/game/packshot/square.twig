{% set boxartUrl = ImageHelper.imageSquareUrl(item) %}
<a href="{{ route('game.show', {'id': item.id, 'linkTitle': item.link_title}) }}">
    {% if boxartUrl %}
        <img src="{{ boxartUrl }}" class="img-responsive" style="border: 0; width: 100%;" alt="{{ item.title }}">
    {% else %}
        <img src="/img/placeholder/no-image-found-square.png" class="img-responsive" style="border: 0; width: 100%;" alt="{{ item.title }}">
    {% endif %}
</a>
