{% import 'ui/components/rating/badge.twig' as rating %}
{% import 'ui/components/game/packshots.twig' as packshots %}

{% if GameList %}
    <div class="row">

    <div class="col-xs-12 col-sm-12 col-md-12">

        <div class="row">
        {% for item in GameList %}
            <div class="col-xs-12 col-sm-12 col-md-6">
                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                    {{ packshots.square(item) }}
                </div>
                <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
                    <table class="table">
                        <tr>
                            <td colspan="2">
                                <span class="h5">
                                    <a href="{{ route('game.show', {'id': item.id, 'linkTitle': item.link_title}) }}">{{ item.title }}</a>
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td style="width: 100px;">
                                <span class="h6">
                                    Rank: {{ item.game_rank }}
                                </span>
                            </td>
                            <td>
                                <span class="h6">
                                {% if item.rating_avg %}
                                    {% if item.game_rank %}
                                        {{ rating.score(item.rating_avg, 'h5', 'b3') }}
                                    {% else %}
                                        {{ rating.tbc(null, 'h5', 'b3', true) }}
                                    {% endif %}
                                {% endif %}
                                </span>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        {% endfor %}
        </div>

    </div>

    </div>
{% endif %}