{% set displayScore = score %}
{% if scoreSize is defined %}
    {% set scoreSizeHeader = scoreSize %}
{% else %}
    {% set scoreSizeHeader = 'h4' %}
{% endif %}

{% if displayScore > 7.9 %}
    <span class="{{ scoreSizeHeader }} badge bg-success switch-rating-badge">{{ displayScore }}</span>
{% elseif displayScore > 5.9 %}
    <span class="{{ scoreSizeHeader }} badge bg-warning switch-rating-badge">{{ displayScore }}</span>
{% else %}
    <span class="{{ scoreSizeHeader }} badge bg-danger switch-rating-badge">{{ displayScore }}</span>
{% endif %}
