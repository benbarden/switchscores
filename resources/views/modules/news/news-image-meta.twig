{% if item.custom_image_url %}
    {% set boxartUrl = item.custom_image_url %}
{% elseif item.game_id %}
    {% set boxartUrl = ImageHelper.imageHeaderUrl(item.game) %}
{% else %}
    {% set boxartUrl = '' %}
{% endif %}
{% if boxartUrl != '' %}
    <meta property="og:image" content="{{ url('/') }}{{ boxartUrl }}" />
{% endif %}
