<!doctype html>
<html lang="{{ config('app.locale') }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <script src="/js/jquery-3.2.1.min.js" type="text/javascript"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- CSRF Token -->
    <meta name="csrf-token" content="{{ csrf_token() }}">

    <title>{{ TopTitle }} | Switch Scores</title>

    <!-- Select2 -->
    <link href="/js/select2/css/select2.min.css" rel="stylesheet" />
    <script src="/js/select2/js/select2.min.js"></script>

    <!-- jQuery UI -->
    <script src="/js/jquery-ui-1.12.1.min.js"></script>
    <link href="/css/jquery-ui-1.12.1.min.css" rel="stylesheet" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css?family=Fira+Sans:400,500,700|Open+Sans:400,400i,600,600i,700,700i" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Noto+Sans+KR:400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@300&display=swap" rel="stylesheet">

    <!-- Switch Scores custom code -->
    <link href="{{ asset('staff-b5/custom.css') }}?v=210820-1" rel="stylesheet">
    <script src="{{ asset('js/ssAdminTools.js') }}?v=210404"></script>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">

</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark">

        <div class="container">

            <div class="collapse navbar-collapse" id="navbarSupportedContent">

                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <li class="nav-item">
                        <a class="navbar-brand" href="{{ url('/') }}">
                            {{ config('app.name', 'Laravel') }}
                        </a>
                    </li>
                </ul>

                <form class="d-flex">

                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        {% if auth_user().hasRole('Games manager') or auth_user().isOwner() %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ route('staff.games.add') }}">+ Add game</a>
                            </li>
                        {% endif %}

                        <li class="nav-item">
                            <a class="nav-link" href="{{ route('staff.index') }}">Staff index</a>
                        </li>

                        {% if auth_user().hasRole('Games manager') or auth_user().isOwner() %}
                            {% include 'theme/staff-b5/nav-top/games.twig' %}
                        {% endif %}

                        {% if auth_user().hasRole('Reviews manager') or auth_user().isOwner() %}
                            {% include 'theme/staff-b5/nav-top/reviews.twig' %}
                        {% endif %}

                        {% if auth_user().hasRole('Category manager') or auth_user().isOwner() %}
                            {% include 'theme/staff-b5/nav-top/categorisation.twig' %}
                        {% endif %}

                        {% if auth_user().hasRole('News manager') or auth_user().isOwner() %}
                            {% include 'theme/staff-b5/nav-top/news.twig' %}
                        {% endif %}

                        {% if auth_user().hasRole('Partnerships manager') or auth_user().isOwner() %}
                            {% include 'theme/staff-b5/nav-top/partners.twig' %}
                        {% endif %}

                        {% if auth_user().hasRole('eShop manager')
                            or auth_user().hasRole('Wikipedia manager')
                            or auth_user().hasRole('Data source manager')
                            or auth_user().isOwner() %}
                            {% include 'theme/staff-b5/nav-top/data.twig' %}
                        {% endif %}

                        {% if auth_user().isOwner() %}
                            {% include 'theme/staff-b5/nav-top/owner-tools.twig' %}
                        {% endif %}

                    </ul>
                </form>

            </div>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>

    <div class="container">
        {% block page_body %}
        {% endblock page_body %}
    </div>
    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <span class="text-muted">
                <small>
                    This page uses Bootstrap 5.1.
                </small>
            </span>
        </div>
    </footer>

    <script src="/js/select2-fix.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>

</body>
</html>
