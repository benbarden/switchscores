<!DOCTYPE html>
<html lang="{{ config('app.locale') }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <script src="/js/jquery-3.2.1.min.js" type="text/javascript"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- CSRF Token -->
    <meta name="csrf-token" content="{{ csrf_token() }}">

    <title>{{ TopTitle }} | World of Switch</title>

    <link href="https://fonts.googleapis.com/css?family=Fira+Sans:400,500,700|Open+Sans:400,400i,600,600i,700,700i" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Noto+Sans+KR:400,700" rel="stylesheet">

    <link href="{{ asset('css/app.css') }}?v=20190512" rel="stylesheet">
    <link href="{{ asset('css/design.css') }}?v=20191010.1" rel="stylesheet">

    <!-- Bootstrap -->
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>

    <!-- Select2 -->
    <link href="/js/select2/css/select2.min.css" rel="stylesheet" />
    <script src="/js/select2/js/select2.min.js"></script>

    {% if GameData.boxart_header_image %}
        <meta name="twitter:card" content="summary_large_image" />
    {% else %}
        <meta name="twitter:card" content="summary" />
    {% endif %}
    <meta name="twitter:site" content="@worldofswitch" />
    <meta name="twitter:creator" content="@benbarden" />
    <meta property="og:url" content="{{ url().current() }}" />
    <meta property="og:title" content="{{ PageTitle }}" />
    {#<meta property="og:description" content="" />#}
    {% if GameData.boxart_header_image %}
        <meta property="og:image" content="{{ url('/') }}/img/games/header/{{ GameData.boxart_header_image }}" />
    {% endif %}

</head>

<body>
{% if env == 'prod' %}
    <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-3185140-38', 'auto');
        ga('send', 'pageview');
    </script>
{% endif %}

<div id="app">

    {% include 'theme/wos/nav-top.twig' %}

    <div class="container">
        <div class="row">
            <div id="wos-body" class="col-sm-12">
                {% if crumbNav is defined %}
                <ol class="breadcrumb" style="border: 0; margin-bottom: 5px !important;">
                    <li><a href="{{ route('welcome') }}">Home</a></li>
                    {% for item in crumbNav %}
                        {% if loop.last %}
                            <li>{{ item.text }}</li>
                        {% else %}
                            <li class="active"><a href="{{ item.url }}">{{ item.text }}</a></li>
                        {% endif %}
                    {% endfor %}
                </ol>
                {% endif %}
                {% if hideHeader is not defined %}
                <h1>
                    {{ PageTitle }}
                    {% if exception is null and hideTweetButton is not defined %}
                        <div class="pull-right">
                            <a class="twitter-share-button"
                               href="https://twitter.com/intent/tweet?text={{ PageTitle }}&via=worldofswitch"
                               data-size="medium">
                                Tweet</a>
                        </div>
                    {% endif %}
                </h1>
                {% endif %}
                {% block page_body %}
                {% endblock page_body %}
            </div>
        </div>
    </div>

    <div class="push"></div>

</div>

{% include 'theme/wos/nav-bottom.twig' %}

<script>
    window.twttr = (function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0],
            t = window.twttr || {};
    if (d.getElementById(id)) return t;
    js = d.createElement(s);
    js.id = id;
    js.src = "https://platform.twitter.com/widgets.js";
    fjs.parentNode.insertBefore(js, fjs);

    t._e = [];
    t.ready = function(f) {
        t._e.push(f);
    };

    return t;
    }(document, "script", "twitter-wjs"));
</script>

<script src="/js/select2-fix.js"></script>

</body>
<!-- {{ env }} | {{ region }} | {{ uid }} -->
</html>