{% if BreadcrumbNav is defined %}
    <ol class="breadcrumb" style="border: 0; margin-bottom: 5px !important;">
        {% for item in BreadcrumbNav %}
            {% if loop.last %}
                {% set crumbClass = ' class="active"' %}
            {% else %}
                {% set crumbClass = '' %}
            {% endif %}
            {% if item.url %}
                <li{{ crumbClass|raw }}><a href="{{ item.url }}">{{ item.text }}</a></li>
            {% else %}
                <li{{ crumbClass|raw }}>{{ item.text }}</li>
            {% endif %}
        {% endfor %}
    </ol>
{% endif %}
