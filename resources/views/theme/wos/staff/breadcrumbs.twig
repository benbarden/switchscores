{% if BreadcrumbNav is defined and BreadcrumbNav is not empty %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            {% for item in BreadcrumbNav %}
                {% if loop.last %}
                    <li class="breadcrumb-item active" aria-current="page">
                        {{ item.text }}
                    </li>
                {% else %}
                    <li class="breadcrumb-item">
                        {% if item.url %}
                            <a href="{{ item.url }}">{{ item.text }}</a>
                        {% else %}
                            {{ item.text }}
                        {% endif %}
                    </li>
                {% endif %}
            {% endfor %}
        </ol>
    </nav>
{% endif %}
