{% if crumbNav is defined %}
    <ol class="breadcrumb">
        <li><a href="{{ route('staff.index') }}">Staff</a></li>
        {% for item in crumbNav %}
            {% if loop.last %}
                {% set crumbClass = ' class="active"' %}
            {% else %}
                {% set crumbClass = '' %}
            {% endif %}
            {% if item.url %}
                <li{{ crumbClass|raw }}><a href="{{ item.url }}">{{ item.text }}</a></li>
            {% else %}
                <li{{ crumbClass|raw }}>{{ item.text }}</li>
            {% endif %}
        {% endfor %}
    </ol>
{% endif %}
