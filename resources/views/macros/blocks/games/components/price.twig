{% macro standard(item) %}
    {% if item.price_eshop %}
        <br>
        <span class="h5">
            {% if item.price_eshop_discounted and item.price_eshop_discount_pc %}
                <s><span class="h4">&pound;{{ item.price_eshop }}</span></s>
                <span class="h4" style="font-weight: bold;">&pound;{{ item.price_eshop_discounted }}</span>
                <span class="h5" style="color: #f00;">{{ item.price_eshop_discount_pc }}% off</span>
            {% else %}
                <span class="h4">&pound;{{ item.price_eshop }}</span>
            {% endif %}
        </span>
    {% endif %}
{% endmacro %}