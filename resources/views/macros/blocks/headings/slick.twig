{% macro slickHeadingTitle(text) %}
    <div class="row">
        <div class="col-md-12">
            <div class="slick-header-container">
            <span class="slick-header-text">
                {{ text }}
            </span>
            </div>
        </div>
    </div>
{% endmacro %}

{% macro slickHeadingSpaced(text) %}
    <div class="row">
        <div class="col-md-12">
            <div class="slick-header-container slick-header-spaced">
            <span class="slick-header-text">
                {{ text }}
            </span>
            </div>
        </div>
    </div>
{% endmacro %}