{% extends 'theme/wos/admin/page-wide.twig' %}

{% block page_inner %}

<h2>Game tags</h2>

<p>
    This page lists the tags used for the game <strong>{{ GameData.title }}</strong>
    and allows you to add or remove tags.
</p>

{% if UnusedTagList %}
    <h3>Choose a tag to add</h3>
    <select id="tag-list" name="tag-list">
        <option value=""></option>
        {% for item in UnusedTagList %}
            <option value="{{ item.id }}">{{ item.tag_name }}</option>
        {% endfor %}
    </select>
    <input id="btn-add-tag" type="button" value="Add to game">
    <div id="js-tag-notify" class="alert alert-success" role="alert" style="display: none;"></div>
{% endif %}

<h3>Game tags</h3>
{% if GameTagList.count > 0 %}
    <table class="table table-striped data-sortable">
        <thead>
            <tr>
                <th class="text-right">#</th>
                <th>Tag</th>
                <th class="text-center">Options</th>
            </tr>
        </thead>
        <tbody>
            {% for item in GameTagList %}
                <tr>
                    <td class="text-right">
                        {{ item.id }}
                    </td>
                    <td>
                        {{ item.tag.tag_name }}
                    </td>
                    <td class="text-center">
                        <a href="javascript:void(0);" id="lnk-remove-tag-{{ item.id }}" class="lnk-remove-tag">Delete</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% else %}
    <p>This game has not yet been tagged.</p>
{% endif %}

{% include 'common/table-sorting.twig' %}
<script>
    $(document).ready(function() {
        $('.data-sortable').DataTable({
            "order": [0, 'desc'],
            "pageLength": 25,
            "columns": [
                null,
                null,
                null
            ]
        });
    });
    $('#btn-add-tag').on('click', function() {

        tagName = $('#tag-list option:selected').text();
        tagId = $('#tag-list option:selected').val();

        if (tagId == '') {
            $('#js-tag-notify').text('No tag selected.');
            $('#js-tag-notify').show();
            return false;
        }

        $.ajaxSetup({
            headers: {
                'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')
            }
        });

        $.getJSON('{{ route('admin.tag.game.add', {'gameId': GameId}) }}', {tagId: tagId}, function(data) {
            $('#js-tag-notify').text('Tag added!');
            $('#js-tag-notify').show();
            $('#tag-list option:selected').val('');
            setTimeout("$('#js-tag-notify').fadeOut(); window.location.reload(true);", 1000);
        })
        .fail(function(data) {
            $('#js-tag-notify').text('An error occurred: ' + data.responseJSON.error);
            $('#js-tag-notify').show();
            $('#tag-list option:selected').val('');
        });
    });
    $('.lnk-remove-tag').on('click', function() {

        elemId = $(this).attr('id');
        gameTagId = elemId.replace('lnk-remove-tag-', '');

        if (gameTagId == '') {
            $('#js-tag-notify').text('Failed to load gameTagId');
            $('#js-tag-notify').show();
            return false;
        }

        if (!window.confirm('Remove this tag from the game?')) {
            return false;
        }

        $.ajaxSetup({
            headers: {
                'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')
            }
        });

        $.getJSON('{{ route('admin.tag.game.remove', {'gameId': GameId}) }}', {gameTagId: gameTagId}, function(data) {
            $('#js-tag-notify').text('Tag removed!');
            $('#js-tag-notify').show();
            $('#tag-list option:selected').val('');
            setTimeout("$('#js-tag-notify').fadeOut(); window.location.reload(true);", 1000);
        })
        .fail(function(data) {
            $('#js-tag-notify').text('An error occurred: ' + data.responseJSON.error);
            $('#js-tag-notify').show();
            $('#tag-list option:selected').val('');
        });
    });
</script>

{% endblock page_inner %}
