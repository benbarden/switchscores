{% extends 'theme/wos/admin/page-wide.twig' %}

{% block page_inner %}

<div class="row">
    <div class="col-xs-12 col-sm-3">
        <input id="js-btn-add" type="button" class="btn outline btn-primary" value="Add a game">
    </div>
    <div class="col-xs-12 col-sm-9">
        <div class="pull-right">
            <a id="admin-nav-all" class="btn btn-default" href="{{ route('admin.games.list') }}">All</a>
            <a id="admin-nav-released" class="btn btn-default" href="{{ route('admin.games.list', {'filter': 'released'}) }}">Released</a>
            <a id="admin-nav-no-genre" class="btn btn-default" href="{{ route('admin.games.list', {'filter': 'no-genre'}) }}">No Genre</a>
            <a id="admin-nav-no-dev-or-pub" class="btn btn-default" href="{{ route('admin.games.list', {'filter': 'no-dev-or-pub'}) }}">No Dev/Pub</a>
            <a id="admin-nav-no-amazon-uk-link" class="btn btn-default" href="{{ route('admin.games.list', {'filter': 'no-amazon-uk-link'}) }}">No Amazon link</a>
        </div>
        <br><br>
        <div class="pull-right">
            <strong>Upcoming:</strong>
            <a id="admin-nav-upcoming-2017-with-dates" class="btn btn-default" href="{{ route('admin.games.list', {'filter': 'upcoming-2017-with-dates'}) }}">2017 with dates</a>
            <a id="admin-nav-upcoming-2017-with-quarters" class="btn btn-default" href="{{ route('admin.games.list', {'filter': 'upcoming-2017-with-quarters'}) }}">2017 with quarters</a>
            <a id="admin-nav-upcoming-2017-sometime" class="btn btn-default" href="{{ route('admin.games.list', {'filter': 'upcoming-2017-sometime'}) }}">2017 sometime</a>
            <a id="admin-nav-upcoming-2018-and-beyond" class="btn btn-default" href="{{ route('admin.games.list', {'filter': 'upcoming-2018-and-beyond'}) }}">2018 and beyond</a>
            <a id="admin-nav-upcoming-tba" class="btn btn-default" href="{{ route('admin.games.list', {'filter': 'upcoming-tba'}) }}">TBA</a>
            <br>
        </div>
    </div>
</div>

<hr>

{% if GameList.count > 0 %}
    <table class="table table-striped data-sortable">
        <thead>
            <tr>
                <th class="text-right">#</th>
                <th>Title</th>
                <th>Release date</th>
                <th class="text-center">Status</th>
                <th class="text-center">Options</th>
            </tr>
        </thead>
        <tbody>
            {% for item in GameList %}
                <tr>
                    <td class="text-right">
                        {{ item.id }}
                    </td>
                    <td>
                        <a href="{{ route('game.show', {'id': item.id, 'title': item.link_title}) }}" target="_blank">{{ item.title }}</a>
                    </td>
                    <td>
                        {% if item.release_date %}
                        {{ item.release_date }}
                        {% else %}
                        {{ item.upcoming_date }}
                        {% endif %}
                    </td>
                    <td class="text-center">
                        {% if item.upcoming == 0 %}
                        Released
                        {% else %}
                        Upcoming
                        {% endif %}
                    </td>
                    <td class="text-center">
                        <a href="{{ route('admin.games.edit', {'gameId': item.id}) }}">Edit</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% else %}
    <p>No games found!</p>
{% endif %}

{% include 'common/table-sorting.twig' %}
<script>
    $('#js-btn-add').on('click', function() {
        top.location.href = '{{ route('admin.games.add') }}';
    });
    $(document).ready(function() {
        var activeNav = '{{ ActiveNav }}';
        $('#admin-nav-' + activeNav).addClass('btn-primary');
        $('.data-sortable').DataTable({
            "order": [{{ jsInitialSort|raw }}],
            "pageLength": 25,
            "columns": [
                null,
                null,
                null,
                { "orderable": false },
                { "orderable": false }
            ]
        });
    });
</script>

{% endblock page_inner %}
