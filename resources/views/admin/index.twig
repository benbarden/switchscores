{% extends 'theme/wos/admin/page-wide.twig' %}

{% block page_inner %}

<div class="row">
    <div class="col-md-6">
        <h2>Action lists</h2>
        <div class="row">
            <div class="col-md-4 text-center">
                <h2><a href="{{ route('admin.games.list')}}/action-list-games-for-release">{{ ActionListGamesForReleaseCount }}</a></h2>
                <a href="{{ route('admin.games.list')}}/action-list-games-for-release">games to release</a>
            </div>
            <div class="col-md-4 text-center">
                <h2><a href="{{ route('admin.feed-items.games.list') }}">{{ PendingFeedGameItemsCount }}</a></h2>
                <a href="{{ route('admin.feed-items.games.list') }}">pending game updates</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 text-center">
                <h2><a href="{{ route('admin.feed-items.reviews.list') }}">{{ UnprocessedFeedReviewItemsCount }}</a></h2>
                <a href="{{ route('admin.feed-items.reviews.list') }}">pending feed reviews</a>
            </div>
            <div class="col-md-4 text-center">
                <h2><a href="{{ route('admin.reviews.user.list') }}">{{ PendingReviewUserCount }}</a></h2>
                <a href="{{ route('admin.reviews.user.list') }}">pending user reviews</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 text-center">
                <h2><a href="{{ route('admin.games.list')}}/action-list-nintendo-url-no-packshots">{{ ActionListNintendoUrlNoPackshotsCount }}</a></h2>
                <a href="{{ route('admin.games.list')}}/action-list-nintendo-url-no-packshots">games with Nintendo URLs but no packshots</a>
            </div>
            <div class="col-md-4 text-center">
                <h2><a href="{{ route('admin.games.list')}}/action-list-recent-no-nintendo-url">{{ ActionListRecentNoNintendoUrlCount }}</a></h2>
                <a href="{{ route('admin.games.list')}}/action-list-recent-no-nintendo-url">recent games with no Nintendo URL</a>
            </div>
            <div class="col-md-4 text-center">
                <h2><a href="{{ route('admin.games.list')}}/action-list-upcoming-no-nintendo-url">{{ ActionListUpcomingNoNintendoUrlCount }}</a></h2>
                <a href="{{ route('admin.games.list')}}/action-list-upcoming-no-nintendo-url">upcoming games with no Nintendo URL</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 text-center">
                <h2><a href="{{ route('admin.games.list')}}/no-dev-or-pub">{{ MissingDevOrPubCount }}</a></h2>
                <a href="{{ route('admin.games.list')}}/no-dev-or-pub">no dev/pub</a>
            </div>
            <div class="col-md-4 text-center">
                <h2><a href="{{ route('admin.games.list')}}/no-genre">{{ MissingGenresCount }}</a></h2>
                <a href="{{ route('admin.games.list')}}/no-genre">no genre</a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <h2>Information</h2>
        <div class="row">
            <div class="col-md-4 text-center">
                <h2><a href="{{ route('admin.user.list') }}">{{ RegisteredUserCount }}</a></h2>
                <a href="{{ route('admin.user.list') }}">registered users</a>
            </div>
        </div>
        <h2>Missing data (Low priority)</h2>
        <div class="row">
            <div class="col-md-4 text-center">
                <h2><a href="{{ route('admin.games.list')}}/no-vendor-page-url">{{ MissingVendorPageUrlCount }}</a></h2>
                <a href="{{ route('admin.games.list')}}/no-vendor-page-url">no vendor URL</a>
            </div>
            <div class="col-md-4 text-center">
                <h2><a href="{{ route('admin.games.list')}}/no-video-url">{{ MissingVideoUrlCount }}</a></h2>
                <a href="{{ route('admin.games.list')}}/no-video-url">no video URL</a>
            </div>
            <div class="col-md-4 text-center">
                <h2><a href="{{ route('admin.games.list')}}/no-twitter-id">{{ MissingTwitterIdCount }}</a></h2>
                <a href="{{ route('admin.games.list')}}/no-twitter-id">no Twitter ID</a>
            </div>
            <div class="col-md-4 text-center">
                <h2><a href="{{ route('admin.games.list')}}/no-amazon-uk-link">{{ MissingAmazonUkLink }}</a></h2>
                <a href="{{ route('admin.games.list')}}/no-amazon-uk-link">no Amazon UK link</a>
            </div>
        </div>
    </div>
</div>

{% endblock page_inner %}
