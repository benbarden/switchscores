                <a href="{{ route('admin.feed-items.games.list') }}">pending game updates</a>
            </div>
        </div>
        <h2>Games with missing data</h2>
        <div class="row">
            <div class="col-md-4 text-center">
                <h2><a href="{{ route('admin.games.list')}}/no-dev-or-pub">{{ MissingDevOrPubCount }}</a></h2>
                <a href="{{ route('admin.games.list')}}/no-dev-or-pub">no dev/pub</a>
