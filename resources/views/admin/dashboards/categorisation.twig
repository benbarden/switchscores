{% extends 'theme/wos/admin/clean-wide.twig' %}

{% set crumbNav = [{'text': PageTitle}] %}

{% block page_inner %}

<div class="row">

    <div class="col-md-6">

        <h2>Stats</h2>

        <p>
            Not every game is in a series, so the progress % is not relevant.
        </p>

        <table class="table">
            <thead>
            <tr>
                <th>Item</th>
                <th class="text-right">With</th>
                <th class="text-right">Without</th>
                <th class="text-right">Progress</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>
                    <a href="{{ route('admin.game-primary-types.list') }}">Primary types</a>
                </td>
                <td class="text-right">
                    <span class="h4">{{ StatsWithPrimaryType }}</span>
                </td>
                <td class="text-right">
                    <span class="h4">{{ StatsWithoutPrimaryType }}</span>
                </td>
                <td class="text-right">
                    <span class="h4">{{ StatsPrimaryTypeProgress }}%</span>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="{{ route('admin.tag.list') }}">Tags</a>
                </td>
                <td class="text-right">
                    <span class="h4">{{ StatsWithTags }}</span>
                </td>
                <td class="text-right">
                    <span class="h4"><a href="{{ route('admin.games-filter.games-with-no-tag')}}" class="h4">{{ StatsWithoutTags }}</a></span>
                </td>
                <td class="text-right">
                    <span class="h4">{{ StatsTagsProgress }}%</span>
                </td>
            </tr>
            <tr>
                <td>No type or tag</td>
                <td class="text-right">
                    <span class="h4"></span>
                </td>
                <td class="text-right">
                    <a href="{{ route('admin.games-filter.games-with-no-type-or-tag')}}" class="h4">{{ NoTypeOrTagCount }}</a>
                </td>
                <td class="text-right">
                    <span class="h4"></span>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="{{ route('admin.genre.list') }}">Genres</a>
                </td>
                <td class="text-right"></td>
                <td class="text-right">
                    <a href="{{ route('admin.games.list')}}/no-genre" class="h4">{{ MissingGenresCount }}</a>
                </td>
                <td class="text-right"></td>
            </tr>
            <tr>
                <td>
                    <a href="{{ route('admin.game-series.list') }}">Series</a>
                </td>
                <td class="text-right">
                    <span class="h4">{{ StatsWithSeries }}</span>
                </td>
                <td class="text-right">
                    <span class="h4">{{ StatsWithoutSeries }}</span>
                </td>
                <td class="text-right">
                    <span class="h4">N/A</span>
                </td>
            </tr>
            </tbody>
        </table>

        <h2>Migrations</h2>

        <p>
            These are areas to focus on when migrating data to new formats.
        </p>

        <table class="table">
            <thead>
            <tr>
                <th>Item</th>
                <th class="text-right">With</th>
                <th class="text-right">Without</th>
                <th class="text-right">Progress</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>
                    Genres, no primary type
                    <br><small>NB: This can be slow to load. Use sparingly.</small>
                </td>
                <td class="text-right">
                    <span class="h4"></span>
                </td>
                <td class="text-right">
                    <span class="h4">
                        <a href="{{ route('admin.games-filter.games-with-genre-no-primary-type') }}">
                            {{ StatsCountGenresNoPrimaryType }}
                        </a>
                    </span>
                </td>
                <td class="text-right">
                    <span class="h4"></span>
                </td>
            </tr>
            </tbody>
        </table>

    </div>

    <div class="col-md-6">

        <h2>Title matches</h2>

        <p>
            These are games that could be quickly categorised based on text in their title.
        </p>

        <h3>Series matches</h3>
        {% if GameSeriesMatchList %}
            <table class="table">
                <thead>
                <tr>
                    <th>Series</th>
                    <th class="text-right">Potential matches</th>
                </tr>
                </thead>
                <tbody>
                {% for item in GameSeriesMatchList %}
                <tr>
                    <td>{{ item.name }}</td>
                    <td class="text-right">
                        <span class="h4">
                            <a href="{{ route('admin.games-filter.game-series-title-matches', {'linkTitle': item.link}) }}">{{ item.gameCount }}</a>
                        </span>
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>No outstanding matches to review.</p>
        {% endif %}

        <h3>Tag matches</h3>
        {% if GameTagMatchList %}
            <table class="table">
                <thead>
                <tr>
                    <th>Tag</th>
                    <th class="text-right">Potential matches</th>
                </tr>
                </thead>
                <tbody>
                {% for item in GameTagMatchList %}
                    <tr>
                        <td>{{ item.name }}</td>
                        <td class="text-right">
                            <span class="h4">
                                <a href="{{ route('admin.games-filter.game-tag-title-matches', {'linkTitle': item.link}) }}">{{ item.gameCount }}</a>
                            </span>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>No outstanding matches to review.</p>
        {% endif %}

    </div>

</div>

<style>
    a.h4 {color: #337ab7;}
</style>

{% endblock page_inner %}
