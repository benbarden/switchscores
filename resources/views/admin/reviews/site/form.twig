{% include 'common/form-errors.twig' %}
<form class="form-horizontal" role="form" method="post" action="{{ formSubmitAction }}">
    {{ csrf_field() }}

    <div class="form-group">
        <label for="name" class="col-md-4 control-label">Name</label>
        <div class="col-md-6">
            <input id="name" type="text" class="form-control" name="name" maxlength="50" required autofocus>
        </div>
    </div>
    <div class="form-group">
        <label for="link_title" class="col-md-4 control-label">Link title</label>
        <div class="col-md-6">
            <input id="link_title" type="text" class="form-control" name="link_title" maxlength="100" required>
        </div>
    </div>
    <div class="form-group">
        <label for="url" class="col-md-4 control-label">Site URL (include http://)</label>
        <div class="col-md-6">
            <input id="url" type="text" class="form-control" name="url" required>
        </div>
    </div>
    <div class="form-group">
        <label for="feed_url" class="col-md-4 control-label">Feed URL (include http://)</label>
        <div class="col-md-6">
            <input id="feed_url" type="text" class="form-control" name="feed_url">
        </div>
    </div>
    <div class="form-group">
        <label for="active" class="col-md-4 control-label">Active</label>
        <div class="col-md-6">
            <input id="active" type="checkbox" name="active" checked>
        </div>
    </div>
    <div class="form-group">
        <label for="rating_scale" class="col-md-4 control-label">Rating scale</label>
        <div class="col-md-6">
            <input id="rating_scale" type="text" class="form-control" name="rating_scale" value="{{ old('rating_scale') }}" size="5" maxlength="2" required>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-8 col-md-offset-4">
            <button type="submit" class="btn outline btn-primary">
                Submit
            </button>
        </div>
    </div>
</form>
