{% extends 'theme/wos/admin/clean-wide.twig' %}

{% set crumbNav = [{'text': PageTitle}] %}

{% block page_inner %}

{% if FilterGame is not defined %}
<div class="row">
    <div class="col-md-3">
        <label for="admin-nav-filter">Filters:</label>
        <select id="admin-nav-filter" name="admin-nav-filter" class="form-control">
            <option value="">All</option>
            <option value="table-games">Table: games</option>
            <option value="source-eshop-europe">Source: eShop Europe</option>
            <option value="source-wikipedia">Source: Wikipedia</option>
            <option value="source-admin">Source: Admin</option>
        </select>
    </div>
</div>
{% endif %}

<hr>

{% if TableLimit is defined %}
    <div class="alert alert-warning" role="alert">
        Page is limited to {{ TableLimit }} review links to minimise performance issues.
        Use filters to drill down into the records.
    </div>
{% endif %}
{% if FilterGame %}
    <div class="alert alert-info" role="alert">
        Showing history records for game: <strong>{{ FilterGame.title }}</strong> (id: {{ FilterGame.id }})
    </div>
{% endif %}

{% if ItemList.count > 0 %}
    <table class="table data-sortable">
        <thead>
            <tr>
                <th class="text-right">#</th>
                <th>Game</th>
                <th>Table</th>
                <th class="text-center">Source</th>
                <th class="text-center">Change type</th>
                <th class="text-center">Date</th>
                <th>Changes</th>
            </tr>
        </thead>
        <tbody>
            {% for item in ItemList %}
                <tr>
                    <td class="text-right">
                        {{ item.id }}
                    </td>
                    <td>
                        {% if item.game %}
                            <a href="{{ route('admin.games.detail', {'gameId': item.game.id}) }}">{{ item.game.title }}</a>
                            <a href="{{ LinkHelper.gameShow(item.game) }}" target="_blank" title="Open game page in a new tab">
                                <span class="glyphicon glyphicon-share" aria-hidden="true"></span>
                            </a>
                        {% else %}
                            {{ item.game_id }}
                        {% endif %}
                    </td>
                    <td>
                        {{ item.affected_table_name }}
                    </td>
                    <td class="text-center">
                        {{ item.source }}
                    </td>
                    <td class="text-center">
                        {{ item.change_type }}
                    </td>
                    <td class="text-center">
                        <small>{{ item.created_at|date('Y-m-d H:i') }}</small>
                    </td>
                    <td>
                        {% if item.data_changed %}
                            {% set dataChanged = JsonHelper.jsonDecode(item.data_changed) %}
                            <p>
                                <small>
                                    {% for field,value in dataChanged %}
                                        {{ field }}: {{ value }}<br>
                                    {% endfor %}
                                </small>
                            </p>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% else %}
    <p>No games found!</p>
{% endif %}

{% include 'common/table-sorting.twig' %}
<script>
    $('#admin-nav-filter').on('change', function() {
        selectedFilter = $(this).val();
        top.location.href = '{{ route('admin.game-change-history.index')}}' + '/' + selectedFilter;
    });
    $(document).ready(function() {
        var selFilter = '{{ SelectedFilter }}';
        $('#admin-nav-filter').val(selFilter);
        $('.data-sortable').DataTable({
            "order": [{{ jsInitialSort|raw }}],
            "pageLength": 25
            /*
            "columns": [
                null,
                null,
                { "orderable": false },
                null,
                { "orderable": false },
                { "orderable": false }
            ]
            */
        });
    });
</script>

{% endblock page_inner %}
